@model BookstoreManagement.ViewModels.Customer.CustomerViewModel

@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-person-lines-fill"></i> Hồ sơ khách hàng</h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-12 text-center mb-3">
                            <div class="avatar-placeholder rounded-circle bg-light text-primary border d-inline-flex align-items-center justify-content-center"
                                style="width: 80px; height: 80px; font-size: 2rem;">
                                <i class="bi bi-person"></i>
                            </div>
                            <h3 class="mt-2">@Model.FullName</h3>
                            <p class="text-muted">Mã KH: @Model.CustomerId</p>
                        </div>

                        <div class="col-md-6">
                            <label class="fw-bold text-muted">Số điện thoại:</label>
                            <p class="fs-5">@Model.Phone</p>
                        </div>

                        <div class="col-md-6">
                            <label class="fw-bold text-muted">Email:</label>
                            <p class="fs-5">@(string.IsNullOrEmpty(Model.Email) ? "Chưa cập nhật" : Model.Email)</p>
                        </div>

                        <div class="col-md-6">
                            <label class="fw-bold text-muted">Trạng thái:</label>
                            <p>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Đang hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Đã khóa</span>
                                }
                            </p>
                        </div>

                        <div class="col-md-12">
                            <label class="fw-bold text-muted">Địa chỉ:</label>
                            <p class="border p-2 rounded bg-light">@(string.IsNullOrEmpty(Model.Address) ? "Chưa cập nhật" : Model.Address)</p>
                        </div>
                    </div>

                    <div class="mt-4 d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning">
                            <i class="bi bi-pencil-square"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>