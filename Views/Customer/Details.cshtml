@model BookstoreManagement.ViewModels.Customer.CustomerViewModel

@{
    ViewData["Title"] = "Hồ sơ khách hàng";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-primary border-top-0 border-end-0 border-bottom-0 border-3">
                <div class="card-body text-center">
                    <div class="avatar-placeholder rounded-circle bg-light text-primary border d-inline-flex align-items-center justify-content-center mb-3"
                        style="width: 100px; height: 100px; font-size: 2.5rem;">
                        <i class="bi bi-person"></i>
                    </div>

                    <h4 class="fw-bold">@Model.FullName</h4>
                    <div class="mb-3">
                        <span class="badge bg-warning text-dark border shadow-sm">@Model.RankName</span>
                    </div>

                    <div class="d-flex justify-content-center gap-2 mb-4">
                        <div class="border rounded p-2 px-3">
                            <small class="d-block text-muted">Điểm tích lũy</small>
                            <span class="fw-bold text-primary fs-5">@Model.Points</span>
                        </div>
                        <div class="border rounded p-2 px-3">
                            <small class="d-block text-muted">Đơn hàng</small>
                            <span class="fw-bold text-success fs-5">@(Model.Orders?.Count ?? 0)</span>
                        </div>
                    </div>

                    <div class="text-start px-2">
                        <p class="mb-2"><i class="bi bi-telephone-fill text-muted me-2"></i> @Model.Phone</p>
                        <p class="mb-2"><i class="bi bi-envelope-fill text-muted me-2"></i> @(Model.Email ?? "Chưa có          Email")</p>
                        <p class="mb-2"><i class="bi bi-geo-alt-fill text-muted me-2"></i> @(Model.Address ?? "Chưa có            địa chỉ")</p>

                        <hr class="my-3" />

                        <p class="mb-2 d-flex justify-content-between">
                            <strong>Trạng thái:</strong>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {

                                <span class="badge bg-danger">Đã khóa</span>
                            }
                        </p>
                        <p class="mb-0 d-flex justify-content-between align-items-center">
                            <strong>Tài khoản Online:</strong>
                            @if (Model.HasAccount)
                            {
                                <span class="badge bg-info text-dark">Đã liên kết</span>
                            }
                            else
                            {
                                <span class="text-muted small">Chưa đăng ký</span>
                            }
                        </p>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning w-100 mb-2">
                            <i class="bi bi-pencil-square"></i> Cập nhật hồ sơ
                        </a>
                        @if (Model.HasAccount && (User.IsInRole("Admin") || User.IsInRole("Manager")))
                        {
                            <a asp-action="ResetPassword" asp-route-id="@Model.CustomerId" class="btn btn-danger w-100">
                                <i class="bi bi-key"></i> Reset mật khẩu
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-primary"><i class="bi bi-clock-history"></i> Lịch sử mua hàng</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Ngày mua</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Thành tiền</th>
                                    <th class="text-center">TT</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Orders != null && Model.Orders.Any())
                                {
                                    foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td><span class="fw-bold text-primary">#@order.OrderId</span></td>
                                            <td>@order.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-center">@order.OrderDetails.Sum(od => od.Quantity)</td>
                                            <td class="text-end fw-bold">@order.FinalAmount.ToString("N0") ₫</td>
                                            <td class="text-center"><span
                                                    class="badge bg-light text-dark border">@order.Status</span></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            <i class="bi bi-cart-x fs-1 d-block mb-2 opacity-50"></i>
                                            Khách hàng này chưa có đơn hàng nào.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>