@model BookstoreManagement.ViewModels.Customer.CustomerViewModel

<form id="customerFormForUpdate" asp-controller="Customer" asp-action="Update" method="post">

    <input type="hidden" asp-for="CustomerId" />

    <div class="mb-3">
        <label asp-for="FullName" class="form-label">Họ tên khách hàng</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Số điện thoại</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveCheck" />
        <label class="form-check-label" for="isActiveCheck">
            Kích hoạt khách hàng
        </label>
    </div>

    <div class="d-flex flex-row justify-content-around gap-3">
        <button type="button" class="btn btn-secondary w-100 cancel-button border border-secondary rounded"
                data-bs-dismiss="modal">
            Hủy
        </button>
        <button type="submit" class="btn w-100">Lưu</button>
    </div>
</form>