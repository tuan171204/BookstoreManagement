@* Views/Report/Index.cshtml *@
@{
    ViewData["Title"] = "Thống kê & Báo cáo";
}

<div class="container-fluid py-4">
    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body bg-white rounded">
            <form asp-action="Index" method="get" class="row align-items-end g-3">
                <div class="col-md-3">
                    <label class="form-label fw-bold text-secondary">Từ ngày</label>
                    <input type="date" name="fromDate" class="form-control"
                        value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold text-secondary">Đến ngày</label>
                    <input type="date" name="toDate" class="form-control"
                        value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel-fill"></i> Xem báo cáo
                    </button>
                </div>
                <div class="col-md-3">
                    <div class="btn-group w-100">
                        <a href="?fromDate=@DateTime.Today.ToString("yyyy-MM-dd")&toDate=@DateTime.Today.ToString("yyyy-MM-dd")"
                            class="btn btn-outline-secondary">Hôm nay</a>
                        <a href="?fromDate=@(new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1).ToString("yyyy-MM-dd"))&toDate=@DateTime.Today.ToString("yyyy-MM-dd")"
                            class="btn btn-outline-secondary">Tháng này</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white h-100 border-0 shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-white-50 small text-uppercase fw-bold">Doanh thu thuần</div>
                            <div class="h3 mb-0 fw-bold">@Model.Revenue.ToString("N0") ₫</div>
                        </div>
                        <i class="bi bi-currency-dollar fs-1 text-white-50"></i>
                    </div>
                    <div class="mt-3 small">
                        <span class="text-white-50">@Model.TotalOrders đơn hàng</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white h-100 border-0 shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-white-50 small text-uppercase fw-bold">Giá vốn hàng bán (COGS)</div>
                            <div class="h3 mb-0 fw-bold">@Model.COGS.ToString("N0") ₫</div>
                        </div>
                        <i class="bi bi-box-seam fs-1 text-white-50"></i>
                    </div>
                    <div class="mt-3 small">
                        <span class="text-white-50">Đã bán @Model.ProductsSold cuốn sách</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white h-100 border-0 shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-white-50 small text-uppercase fw-bold">Lợi nhuận gộp</div>
                            <div class="h3 mb-0 fw-bold">@Model.GrossProfit.ToString("N0") ₫</div>
                        </div>
                        <i class="bi bi-graph-up-arrow fs-1 text-white-50"></i>
                    </div>
                    <div class="mt-3 small">
                        <span class="text-white-50">Tỷ suất LN: @Model.ProfitMargin.ToString("N2")%</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-secondary text-white h-100 border-0 shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-white-50 small text-uppercase fw-bold">Tiền nhập hàng (Kỳ này)</div>
                            <div class="h3 mb-0 fw-bold">@Model.TotalImportCost.ToString("N0") ₫</div>
                        </div>
                        <i class="bi bi-truck fs-1 text-white-50"></i>
                    </div>
                    <div class="mt-3 small">
                        <span class="text-white-50">Dòng tiền chi ra</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4 border-0">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-bar-chart-line-fill"></i> Biểu đồ Doanh thu & Lợi nhuận
            </h6>
        </div>
        <div class="card-body">
            <div style="height: 400px;">
                <canvas id="mainChart"></canvas>
            </div>
        </div>
    </div>

    <!-- BẢNG TOP 10 – ĐÃ FIX MÀU HEADER -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">
                <i class="bi bi-trophy"></i> TOP 10 SÁCH BÁN CHẠY NHẤT
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th width="80" class="text-center">Xếp hạng</th>
                            <th>Tên sách</th>
                            <th width="120" class="text-center">Số lượng</th>
                            <th width="180" class="text-end">Doanh thu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.TopBooks != null && ((IEnumerable<dynamic>)ViewBag.TopBooks).Any())
                        {
                            var index = 0;
                            foreach (var item in ViewBag.TopBooks)
                            {
                                index++;
                                <tr>
                                    <td class="text-center align-middle">
                                        @if (index <= 3)
                                        {
                                            <span
                                                class="badge bg-@(index == 1 ? "warning text-dark" : index == 2 ? "secondary" : "danger") fs-6">
                                                @(index == 1 ? "1st" : index == 2 ? "2nd" : "3rd")
                                            </span>
                                        }
                                        else
                                        {
                                            <strong>@index</strong>
                                        }
                                    </td>
                                    <td class="align-middle"><strong>@item.Title</strong></td>
                                    <td class="text-center align-middle">
                                        <span class="badge bg-primary fs-6">@item.SoLuong</span>
                                    </td>
                                    <td class="text-end align-middle fw-bold text-success">
                                        @((item.DoanhThu as decimal?)?.ToString("#,##0") ?? "0") ₫
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <i class="bi bi-inbox" style="font-size: 4rem; color: #ddd;"></i>
                                    <p class="mt-3 text-muted">Chưa có dữ liệu bán hàng</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row mb-4 mt-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 bg-success text-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-pie-chart-fill"></i> THỐNG KÊ THEO DANH MỤC SẢN PHẨM
                    </h6>

                    <div class="d-flex gap-2">
                        <input type="date" id="catFromDate" class="form-control form-control-sm"
                            value="@DateTime.Today.AddDays(-29).ToString("yyyy-MM-dd")">
                        <input type="date" id="catToDate" class="form-control form-control-sm"
                            value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")">
                        <button class="btn btn-sm btn-light text-success fw-bold" onclick="loadCategoryChart()">
                            <i class="bi bi-filter"></i> Lọc
                        </button>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-8 border-end">
                            <h6 class="text-center text-muted mb-3 small fw-bold">SO SÁNH NHẬP - XUẤT - TỒN KHO</h6>
                            <div style="height: 350px;">
                                <canvas id="categoryBarChart"></canvas>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <h6 class="text-center text-muted mb-3 small fw-bold">TỶ TRỌNG XUẤT KHO (BÁN HÀNG)</h6>
                            <div style="height: 300px; position: relative;">
                                <canvas id="categoryPieChart"></canvas>
                            </div>
                            <div class="mt-3 text-center">
                                <small class="text-muted">Biểu đồ thể hiện danh mục nào được xuất kho (bán) nhiều nhất
                                    trong kỳ.</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // --- 1. VẼ BIỂU ĐỒ CHÍNH (Doanh thu & Lợi nhuận) ---
        const ctxMain = document.getElementById('mainChart').getContext('2d');
        const labels = @Html.Raw(Model.ChartLabels);
        const revenueData = @Html.Raw(Model.ChartRevenueData);
        const profitData = @Html.Raw(Model.ChartProfitData);

        new Chart(ctxMain, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Doanh thu',
                        data: revenueData,
                        backgroundColor: 'rgba(13, 110, 253, 0.7)', // Primary Blue
                        order: 2
                    },
                    {
                        label: 'Lợi nhuận',
                        data: profitData,
                        backgroundColor: 'rgba(25, 135, 84, 0.9)', // Success Green
                        type: 'line', // Vẽ đường lợi nhuận đè lên cột doanh thu
                        borderColor: '#198754',
                        borderWidth: 2,
                        tension: 0.3,
                        pointRadius: 3,
                        order: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    mode: 'index',
                    intersect: false,
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function (value) {
                                return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND', maximumSignificantDigits: 3 }).format(value);
                            }
                        }
                    }
                }
            }
        });

        // --- LOGIC MỚI: BIỂU ĐỒ DANH MỤC ---
        let catBarChart = null;
        let catPieChart = null;

        async function loadCategoryChart() {
            const fromDate = document.getElementById('catFromDate').value;
            const toDate = document.getElementById('catToDate').value;

            try {
                const response = await fetch(`/Report/GetCategoryReport?fromDate=${fromDate}&toDate=${toDate}`);
                if (!response.ok) throw new Error("Lỗi tải dữ liệu danh mục");

                const data = await response.json();

                // Chuẩn bị dữ liệu
                const labels = data.map(x => x.name);
                const importData = data.map(x => x.importQty);
                const exportData = data.map(x => x.exportQty);
                const stockData = data.map(x => x.stockQty);

                // 1. Vẽ Bar Chart (So sánh 3 chỉ số)
                const ctxBar = document.getElementById('categoryBarChart').getContext('2d');
                if (catBarChart) catBarChart.destroy();

                catBarChart = new Chart(ctxBar, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: 'Nhập trong kỳ',
                                data: importData,
                                backgroundColor: 'rgba(25, 135, 84, 0.7)', // Xanh lá
                                borderColor: '#198754',
                                borderWidth: 1
                            },
                            {
                                label: 'Xuất trong kỳ',
                                data: exportData,
                                backgroundColor: 'rgba(220, 53, 69, 0.7)', // Đỏ
                                borderColor: '#dc3545',
                                borderWidth: 1
                            },
                            {
                                label: 'Tồn kho hiện tại',
                                data: stockData,
                                backgroundColor: 'rgba(13, 110, 253, 0.7)', // Xanh dương
                                borderColor: '#0d6efd',
                                borderWidth: 1
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: { beginAtZero: true }
                        },
                        plugins: {
                            tooltip: {
                                mode: 'index',
                                intersect: false
                            }
                        }
                    }
                });

                // 2. Vẽ Pie Chart (Tỷ trọng xuất kho)
                const ctxPie = document.getElementById('categoryPieChart').getContext('2d');
                if (catPieChart) catPieChart.destroy();

                catPieChart = new Chart(ctxPie, {
                    type: 'doughnut',
                    data: {
                        labels: labels,
                        datasets: [{
                            data: exportData,
                            backgroundColor: [
                                '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b',
                                '#858796', '#5a5c69', '#00aba9', '#2d89ef', '#ffc107'
                            ],
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: { boxWidth: 12, font: { size: 10 } }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function (context) {
                                        let value = context.parsed;
                                        let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                        let percentage = total > 0 ? ((value / total) * 100).toFixed(1) + '%' : '0%';
                                        return ` ${context.label}: ${value} (${percentage})`;
                                    }
                                }
                            }
                        }
                    }
                });

            } catch (error) {
                console.error("Lỗi chart category:", error);
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            loadCategoryChart();
        });
    </script>

    <style>
        #revenueChart {
            height: 420px !important;
        }
    </style>
}