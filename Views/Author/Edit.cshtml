@model BookstoreManagement.ViewModels.Author.AuthorEditViewModel

@{
    ViewData["Title"] = "Chỉnh sửa tác giả";
    // Đường dẫn ảnh (nếu null thì dùng ảnh mặc định)
    var photoPath = "~/images/authors/" + (Model.ExistingImageUrl ?? "no-image.png");
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Chỉnh sửa tác giả</h4>
            <a asp-action="Index" class="btn btn-sm btn-dark"><i class="bi bi-arrow-left"></i> Quay lại</a>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="AuthorId" />
                <input type="hidden" asp-for="ExistingImageUrl" />

                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label fw-bold"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pseudonym" class="form-label fw-bold"></label>
                                <input asp-for="Pseudonym" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label fw-bold"></label>
                                <input asp-for="DateOfBirth" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nationality" class="form-label fw-bold"></label>
                                <input asp-for="Nationality" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Website" class="form-label fw-bold"></label>
                            <input asp-for="Website" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Bio" class="form-label fw-bold"></label>
                            <textarea asp-for="Bio" class="form-control" rows="5"></textarea>
                        </div>
                    </div>

                    <div class="col-md-4 text-center">
                        <div class="card bg-light">
                            <div class="card-body">
                                <label class="form-label fw-bold mb-3">Ảnh đại diện hiện tại</label>
                                <div class="mb-3">
                                    <img id="imgPreview" src="@photoPath" asp-append-version="true"
                                        class="img-thumbnail rounded shadow-sm"
                                        style="width: 200px; height: 250px; object-fit: cover;" />
                                </div>

                                <div class="input-group">
                                    <input asp-for="AvatarImage" type="file" class="form-control" accept="image/*"
                                        onchange="previewImage(this)" />
                                </div>
                                <span asp-validation-for="AvatarImage" class="text-danger small"></span>
                                <small class="text-muted mt-2 d-block">Chọn ảnh mới để thay thế ảnh cũ</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-warning btn-lg px-5">
                        <i class="bi bi-check-circle-fill me-2"></i> Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgPreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}