@{
    ViewData["Title"] = "Quên mật khẩu";
}

@model BookstoreManagement.ViewModels.Account.ResetPasswordViewModel

<style>
    body {
        background-color: #fff;
    }

    .reset-password-logo {
        display: block;
        margin: auto;
        width: 200px;
        height: auto;
    }

    label,
    button,
    .reset-password-btn,
    .form-group,
    .form-group input {
        font-size: 20px;
    }

    .form-group input {
        border: 1px solid #9c9c9c;
        outline: #1976D2 !important;
        padding: 10px;
    }

    .reset-password-form {
        display: flex;
        flex-direction: column !important;
        gap: 20px !important;
    }

    .form-group {
        display: flex;
        flex-direction: column !important;
        gap: 10px !important;
    }

    .reset-password-btn {
        padding: 15px 0px !important;
    }

    .form-group a {
        color: #1976D2 !important;
        font-style: inherit;
        text-decoration: inherit;
    }
</style>

<img src="~/images/bookstore_logo1.jpg" alt="Logo" class="reset-password-logo" />

<form method="post" asp-action="ResetPassword" class="reset-password-form container w-50">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Token" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group mb-3">
        <label>Mật khẩu mới</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Xác nhận mật khẩu</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button class="reset-password-btn btn btn-primary w-100">Đặt lại mật khẩu</button>
</form>