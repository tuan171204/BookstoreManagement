@model BookstoreManagement.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập Quản trị";
}

<style>
    body {
        background-color: #fff;
    }

    .login-logo {
        display: block;
        margin: auto;
        width: 200px;
        height: auto;
    }

    label,
    button,
    .login-btn,
    .form-group,
    .form-group input {
        font-size: 20px;
    }

    .form-group input {
        border: 1px solid #9c9c9c;
        outline: #1976D2 !important;
        padding: 10px;
    }

    .login-form {
        display: flex;
        flex-direction: column !important;
        gap: 20px !important;
    }

    .form-group {
        display: flex;
        flex-direction: column !important;
        gap: 10px !important;
    }

    .login-btn {
        padding: 15px 0px !important;
    }

    .form-group a {
        color: #1976D2 !important;
        font-style: inherit;
        text-decoration: inherit;
    }
</style>

<img src="~/images/bookstore_logo1.jpg" alt="Logo" class="login-logo" />

<div class="container w-50 mb-3">
    <div class="alert alert-info text-center">
        <i class="fas fa-shield-alt me-2"></i>
        <strong>Trang đăng nhập Quản trị</strong><br>
        <small class="text-muted">Chỉ dành cho Admin và Manager</small>
    </div>
</div>

<form method="post" asp-action="Login" class="login-form container w-50">
    @Html.AntiForgeryToken()
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <div class="form-group mb-3">
        <label>Email</label>
        <input class="form-control" name="email" placeholder="Nhập email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Mật khẩu</label>
        <input class="form-control" type="password" name="password" placeholder="Nhập mật khẩu" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button class="login-btn btn btn-primary w-100">Đăng nhập</button>

    <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe" value="true">
        <label class="form-check-label" for="rememberMe">Ghi nhớ tôi</label>
    </div>

    <div class="form-group mb-3">
        <a asp-controller="Account" asp-action="ForgotPassword">Quên mật khẩu ?</a>
    </div>
</form>