@{
    ViewData["Title"] = "Đăng nhập";
}

<style>
    body {
        background-color: #fff;
    }

    .login-logo {
        display: block;
        margin: auto;
        width: 200px;
        height: auto;
    }

    label,
    button,
    .login-btn,
    .form-group,
    .form-group input {
        font-size: 20px;
    }

    .form-group input {
        border: 1px solid #9c9c9c;
        outline: #1976D2 !important;
        padding: 10px;
    }

    .login-form {
        display: flex;
        flex-direction: column !important;
        gap: 20px !important;
    }

    .form-group {
        display: flex;
        flex-direction: column !important;
        gap: 10px !important;
    }

    .login-btn {
        padding: 15px 0px !important;
    }

    .form-group a {
        color: #1976D2 !important;
        font-style: inherit;
        text-decoration: inherit;
    }
</style>

<img src="~/images/bookstore_logo1.jpg" alt="Logo" class="login-logo" />

<form method="post" asp-action="Login" class="login-form container w-50">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label>Email</label>
        <input class="form-control" name="email" placeholder="Nhập email" required />
        <span class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Mật khẩu</label>
        <input class="form-control" type="password" name="password" placeholder="Nhập mật khẩu" required />
    </div>

    <button class="login-btn btn btn-primary w-100">Đăng nhập</button>

    <div class="form-group mb-3">
        <a asp-controller="Home" asp-action="Index">Quên mật khẩu ?</a>
    </div>

    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <div class="text-danger">@error.ErrorMessage</div>
    }
</form>