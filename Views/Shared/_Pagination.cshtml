@{
    // Tạo query string cho tất cả các filter parameters
    var queryParams = new List<string>();
    
    // Search string
    if (ViewData["CurrentFilter"] != null && !string.IsNullOrEmpty(ViewData["CurrentFilter"].ToString()))
    {
        queryParams.Add($"searchString={Uri.EscapeDataString(ViewData["CurrentFilter"].ToString())}");
    }
    
    // Author filter
    if (ViewData["AuthorId"] != null && !string.IsNullOrEmpty(ViewData["AuthorId"].ToString()))
    {
        queryParams.Add($"authorId={ViewData["AuthorId"]}");
    }
    
    // Publisher filter
    if (ViewData["PublisherId"] != null && !string.IsNullOrEmpty(ViewData["PublisherId"].ToString()))
    {
        queryParams.Add($"publisherId={ViewData["PublisherId"]}");
    }
    
    // Category filter
    if (ViewData["CategoryId"] != null && !string.IsNullOrEmpty(ViewData["CategoryId"].ToString()))
    {
        queryParams.Add($"categoryId={ViewData["CategoryId"]}");
    }
    
    // IsActive filter (for Customer, Employee, Supplier, Promotion)
    if (ViewData["IsActiveFilter"] != null && !string.IsNullOrEmpty(ViewData["IsActiveFilter"].ToString()))
    {
        queryParams.Add($"isActive={ViewData["IsActiveFilter"]}");
    }
    
    // Role filter (for Employee)
    if (ViewData["RoleFilter"] != null && !string.IsNullOrEmpty(ViewData["RoleFilter"].ToString()))
    {
        queryParams.Add($"roleName={Uri.EscapeDataString(ViewData["RoleFilter"].ToString())}");
    }
    
    // Type filter (for Warehouse)
    if (ViewData["TypeFilter"] != null && !string.IsNullOrEmpty(ViewData["TypeFilter"].ToString()))
    {
        queryParams.Add($"typeFilter={Uri.EscapeDataString(ViewData["TypeFilter"].ToString())}");
    }
    
    // Status filter (for Warehouse)
    if (ViewData["StatusFilter"] != null && !string.IsNullOrEmpty(ViewData["StatusFilter"].ToString()))
    {
        queryParams.Add($"statusFilter={Uri.EscapeDataString(ViewData["StatusFilter"].ToString())}");
    }
    
    // Helper function để tạo URL với pageNumber
    Func<int, string> GetPageUrl = (pageNum) =>
    {
        var allParams = new List<string> { $"pageNumber={pageNum}" };
        allParams.AddRange(queryParams);
        return "?" + string.Join("&", allParams);
    };
}

@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <!-- Previous Button -->
            <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="@GetPageUrl(ViewBag.PageNumber - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @{
                int currentPage = ViewBag.PageNumber;
                int totalPages = ViewBag.TotalPages;
                int startPage = Math.Max(1, currentPage - 2);
                int endPage = Math.Min(totalPages, currentPage + 2);
            }

            <!-- First Page -->
            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@GetPageUrl(1)">1</a>
                </li>
                @if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            <!-- Page Numbers -->
            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@GetPageUrl(i)">@i</a>
                </li>
            }

            <!-- Last Page -->
            @if (endPage < totalPages)
            {
                @if (endPage < totalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item">
                    <a class="page-link" href="@GetPageUrl(totalPages)">@totalPages</a>
                </li>
            }

            <!-- Next Button -->
            <li class="page-item @(ViewBag.PageNumber == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@GetPageUrl(ViewBag.PageNumber + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
    <p class="text-center text-muted mt-2">
        Trang @ViewBag.PageNumber / @ViewBag.TotalPages (Tổng @ViewBag.TotalItems mục)
    </p>
}
