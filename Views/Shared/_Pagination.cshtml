@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous Button -->
            <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="?pageNumber=@(ViewBag.PageNumber - 1)@(ViewData["CurrentFilter"] != null ? "&searchString=" + ViewData["CurrentFilter"] : "")" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @{
                int currentPage = ViewBag.PageNumber;
                int totalPages = ViewBag.TotalPages;
                int startPage = Math.Max(1, currentPage - 2);
                int endPage = Math.Min(totalPages, currentPage + 2);
            }

            <!-- First Page -->
            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=1@(ViewData["CurrentFilter"] != null ? "&searchString=" + ViewData["CurrentFilter"] : "")">1</a>
                </li>
                @if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            <!-- Page Numbers -->
            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="?pageNumber=@i@(ViewData["CurrentFilter"] != null ? "&searchString=" + ViewData["CurrentFilter"] : "")">@i</a>
                </li>
            }

            <!-- Last Page -->
            @if (endPage < totalPages)
            {
                @if (endPage < totalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@totalPages@(ViewData["CurrentFilter"] != null ? "&searchString=" + ViewData["CurrentFilter"] : "")">@totalPages</a>
                </li>
            }

            <!-- Next Button -->
            <li class="page-item @(ViewBag.PageNumber == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?pageNumber=@(ViewBag.PageNumber + 1)@(ViewData["CurrentFilter"] != null ? "&searchString=" + ViewData["CurrentFilter"] : "")" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
    <p class="text-center text-muted">
        Trang @ViewBag.PageNumber / @ViewBag.TotalPages (Tổng @ViewBag.TotalItems mục)
    </p>
}
