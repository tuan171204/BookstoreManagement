@{
    // Tạo query string cho các filter parameters
    var queryParams = new List<string>();
    
    if (ViewBag.FromDateParam != null)
    {
        queryParams.Add($"fromDate={((DateTime)ViewBag.FromDateParam).ToString("yyyy-MM-dd")}");
    }
    
    if (ViewBag.ToDateParam != null)
    {
        queryParams.Add($"toDate={((DateTime)ViewBag.ToDateParam).ToString("yyyy-MM-dd")}");
    }
    
    if (!string.IsNullOrEmpty(ViewBag.StatusParam))
    {
        queryParams.Add($"status={ViewBag.StatusParam}");
    }
    
    // Helper function để tạo URL với pageNumber
    Func<int, string> GetPageUrl = (pageNum) =>
    {
        var allParams = new List<string> { $"pageNumber={pageNum}" };
        allParams.AddRange(queryParams);
        return "?" + string.Join("&", allParams);
    };
}

@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <!-- Previous Button -->
            <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="@GetPageUrl(ViewBag.PageNumber - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @{
                int currentPage = ViewBag.PageNumber;
                int totalPages = ViewBag.TotalPages;
                int startPage = Math.Max(1, currentPage - 2);
                int endPage = Math.Min(totalPages, currentPage + 2);
            }

            <!-- First Page -->
            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@GetPageUrl(1)">1</a>
                </li>
                @if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            <!-- Page Numbers -->
            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@GetPageUrl(i)">@i</a>
                </li>
            }

            <!-- Last Page -->
            @if (endPage < totalPages)
            {
                @if (endPage < totalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item">
                    <a class="page-link" href="@GetPageUrl(totalPages)">@totalPages</a>
                </li>
            }

            <!-- Next Button -->
            <li class="page-item @(ViewBag.PageNumber == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@GetPageUrl(ViewBag.PageNumber + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
    <p class="text-center text-muted mt-2">
        Trang @ViewBag.PageNumber / @ViewBag.TotalPages (Tổng @ViewBag.TotalItems đơn hàng)
    </p>
}

