@model BookstoreManagement.ViewModels.Publisher.PublisherViewModel

@{
    ViewData["Title"] = "Chi tiết Nhà xuất bản";
    // Đường dẫn logo (nếu null thì dùng ảnh mặc định)
    var logoPath = "~/images/publishers/" + (Model.ImageUrl ?? "no-image.png");
}

<div class="container py-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-building me-2"></i>Thông tin Nhà xuất bản</h4>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.PublisherId" class="btn btn-sm btn-warning fw-bold">
                    <i class="bi bi-pencil"></i> Sửa
                </a>
                <a asp-action="Index" class="btn btn-sm btn-light text-success fw-bold">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-3 text-center mb-4">
                    <div class="p-2 border rounded bg-light">
                        <img src="@logoPath" asp-append-version="true" class="img-fluid"
                            style="max-height: 200px; object-fit: contain;" alt="Logo @Model.Name" />
                    </div>
                </div>

                <div class="col-md-9">
                    <h2 class="text-success fw-bold mb-3">@Model.Name</h2>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item bg-transparent ps-0">
                                    <i class="bi bi-geo-alt-fill text-danger me-2"></i>
                                    <strong>Địa chỉ:</strong> @(Model.Address ?? "Chưa cập nhật")
                                </li>
                                <li class="list-group-item bg-transparent ps-0">
                                    <i class="bi bi-telephone-fill text-primary me-2"></i>
                                    <strong>Điện thoại:</strong> @(Model.Phone ?? "Chưa cập nhật")
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item bg-transparent ps-0">
                                    <i class="bi bi-envelope-fill text-warning me-2"></i>
                                    <strong>Email:</strong> @(Model.Email ?? "Chưa cập nhật")
                                </li>
                                <li class="list-group-item bg-transparent ps-0">
                                    <i class="bi bi-globe text-info me-2"></i>
                                    <strong>Website:</strong>
                                    @if (!string.IsNullOrEmpty(Model.Website))
                                    {
                                        <a href="@Model.Website" target="_blank">@Model.Website</a>
                                    }
                                    else
                                    {

                                        <span>Chưa cập nhật</span>
                                    }
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-bold text-secondary"><i class="bi bi-info-circle me-1"></i> Giới thiệu</h5>
                        <div class="p-3 bg-light rounded border">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Html.Raw(Model.Description.Replace("\n", "<br>"))
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Chưa có thông tin giới thiệu.</span>
                            }
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center border-top pt-3">
                        <span class="badge bg-primary fs-6">
                            <i class="bi bi-book me-1"></i> Đã xuất bản: @Model.BooksCount đầu sách
                        </span>
                        <small class="text-muted">
                            Ngày tạo: @(Model.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>