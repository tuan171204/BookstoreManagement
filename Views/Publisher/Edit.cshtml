@model BookstoreManagement.ViewModels.Publisher.PublisherEditViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Nhà xuất bản";
    var logoPath = "~/images/publishers/" + (Model.ExistingLogoUrl ?? "no-image.png");
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Cập nhật Nhà xuất bản</h4>
            <a asp-action="Index" class="btn btn-sm btn-dark"><i class="bi bi-arrow-left"></i> Quay lại</a>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="PublisherId" />
                <input type="hidden" asp-for="ExistingLogoUrl" />

                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label fw-bold"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-bold"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Website" class="form-label fw-bold"></label>
                            <input asp-for="Website" class="form-control" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card bg-light text-center">
                            <div class="card-body">
                                <label class="form-label fw-bold mb-3">Logo hiện tại</label>

                                <div class="mb-3 border bg-white p-2 rounded">
                                    <img id="imgPreview" src="@logoPath" asp-append-version="true" class="img-fluid"
                                        style="max-height: 180px; object-fit: contain;" />
                                </div>

                                <div class="input-group">
                                    <input asp-for="LogoImage" type="file" class="form-control" accept="image/*"
                                        onchange="previewImage(this)" />
                                </div>
                                <span asp-validation-for="LogoImage" class="text-danger small"></span>
                                <small class="text-muted d-block mt-2">Upload file ảnh mới để thay thế</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-warning btn-lg px-5">
                        <i class="bi bi-save me-2"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Script xem trước ảnh khi chọn file mới
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgPreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}