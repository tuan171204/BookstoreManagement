@model BookstoreManagement.ViewModels.Employee.EmployeeViewModel

@{
    ViewData["Title"] = "Chi tiết nhân viên";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-person-badge"></i> Hồ sơ nhân sự</h5>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success border border-light">Đang làm việc</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary border border-light">Đã nghỉ việc</span>
                    }
                </div>

                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="rounded-circle bg-light border d-inline-flex align-items-center justify-content-center shadow-sm"
                            style="width: 100px; height: 100px; font-size: 2.5rem; color: #555;">
                            @(Model.FullName?.FirstOrDefault().ToString().ToUpper() ?? "?")
                        </div>
                        <h3 class="mt-2 fw-bold">@Model.FullName</h3>
                        <p class="text-muted mb-0">Mã NV: #@Model.Id</p>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="small text-muted text-uppercase fw-bold">Thông tin liên hệ</label>
                            <div class="p-3 bg-light rounded mt-1 h-100">
                                <p class="mb-2"><i class="bi bi-telephone w-25"></i> @Model.PhoneNumber</p>
                                <p class="mb-2"><i class="bi bi-envelope w-25"></i> @(Model.Email ?? "Chưa cập nhật")
                                </p>
                                <p class="mb-0"><i class="bi bi-geo-alt w-25"></i> @(Model.Address ?? "Chưa cập nhật")
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="small text-muted text-uppercase fw-bold">Thông tin công việc</label>
                            <div class="p-3 bg-light rounded mt-1 h-100">
                                <p class="mb-2">
                                    <i class="bi bi-calendar-event w-25"></i> Ngày vào làm:
                                    <strong>@Model.HireDate.ToString("dd/MM/yyyy")</strong>
                                </p>
                                <p class="mb-2">
                                    <i class="bi bi-cash-coin w-25"></i> Lương cơ bản:
                                    <strong class="text-success">@Model.Salary.ToString("N0") ₫</strong>
                                </p>
                            </div>
                        </div>

                        <div class="col-12 mt-4">
                            <label class="small text-muted text-uppercase fw-bold">Tài khoản hệ thống</label>
                            <div class="border rounded p-3 d-flex align-items-center justify-content-between">
                                <div>
                                    @if (!string.IsNullOrEmpty(Model.AccountUsername))
                                    {
                                        <div>
                                            <i class="bi bi-person-check-fill text-success fs-5 me-2"></i>
                                            Đã liên kết tài khoản: <strong>@Model.AccountUsername</strong>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-muted">
                                            <i class="bi bi-person-x fs-5 me-2"></i>
                                            Nhân viên này chưa được cấp tài khoản đăng nhập.
                                        </div>
                                    }
                                </div>

                                @if (string.IsNullOrEmpty(Model.AccountId) && Model.IsActive)
                                {
                                    <button class="btn btn-sm btn-outline-primary" asp-action="GrantAccount"
                                        asp-route-id="@Model.Id">
                                        <i class="bi bi-key"></i> Cấp tài khoản
                                    </button>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                            <i class="bi bi-pencil-square"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>