@model IEnumerable<BookstoreManagement.ViewModels.Employee.EmployeeViewModel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý nhân viên";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="content-title m-0">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus-fill"></i> Thêm hồ sơ nhân viên
        </a>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <input type="hidden" name="pageNumber" value="1" />

                <div class="col-md-6">
                    <label class="form-label">Tìm kiếm</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white text-muted"><i class="bi bi-search"></i></span>
                        <input type="text" name="searchString" class="form-control"
                            placeholder="Tìm theo tên, email, SĐT..." value="@ViewData["CurrentFilter"]" />
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Trạng thái làm việc</label>
                    <select name="isActive" class="form-select">
                        <option value="">-- Tất cả --</option>
                        <option value="true" selected="@(ViewBag.IsActiveParam == true)">Đang làm việc</option>
                        <option value="false" selected="@(ViewBag.IsActiveParam == false)">Đã nghỉ/Khóa</option>
                    </select>
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Lọc dữ liệu</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-light text-secondary">
                        <tr>
                            <th>Họ tên / Email</th>
                            <th>Số điện thoại</th>
                            <th>Ngày vào làm</th>
                            <th>Tài khoản HT</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center" style="width: 150px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold text-dark">@item.FullName</div>
                                        <small class="text-muted">@item.Email</small>
                                    </td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.HireDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.AccountUsername))
                                        {
                                            <div class="mb-1">
                                                <span class="badge bg-info text-dark p-2" title="Tài khoản: @item.AccountUsername">
                                                    <i class="bi bi-person-check-fill"></i> @item.AccountUsername
                                                </span>
                                            </div>
                                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-dark"
                                                    onclick="openResetModal(@item.Id, '@item.FullName')">
                                                    <i class="bi bi-arrow-counterclockwise"></i> Reset MK
                                                </button>
                                            }
                                        }
                                        else
                                        {
                                            <a asp-action="GrantAccount" asp-route-id="@item.Id"
                                                class="btn btn-sm btn-outline-primary shadow-sm fw-bold">
                                                <i class="bi bi-key-fill me-1"></i> Cấp tài khoản
                                            </a>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success bg-opacity-75 w-50 p-2">Đang làm việc</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary w-50 p-2">Đã nghỉ</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"
                                                title="Chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Sửa">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger"
                                                onclick="confirmDelete(@item.Id, '@item.FullName')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-people display-4 opacity-50"></i>
                                    <p class="mt-2">Chưa có hồ sơ nhân viên nào.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="p-3">
                @await Html.PartialAsync("_Pagination")
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="resetPasswordModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Đặt lại mật khẩu</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AdminResetPassword" method="post">
                <div class="modal-body">
                    <input type="hidden" name="employeeId" id="resetEmployeeId" />

                    <p>Bạn đang đặt lại mật khẩu cho nhân viên: <strong id="resetEmployeeName"
                            class="text-primary"></strong></p>

                    <div class="mb-3">
                        <label class="form-label">Mật khẩu mới:</label>
                        <input type="text" name="newPassword" class="form-control" placeholder="Nhập mật khẩu mới..."
                            required minlength="6" />
                        <small class="text-muted">Nhập mật khẩu mới để cấp cho nhân viên.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xác nhận đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>

<form id="deleteForm" asp-action="Delete" method="post" style="display:none;">
    <input type="hidden" name="id" id="deleteId" />
</form>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            if (confirm(`Bạn có chắc chắn muốn xóa/khóa hồ sơ của "${name}"?`)) {
                document.getElementById('deleteId').value = id;
                document.getElementById('deleteForm').submit();
            }
        }

        function openResetModal(id, name) {
            document.getElementById('resetEmployeeId').value = id;
            document.getElementById('resetEmployeeName').innerText = name;

            var myModal = new bootstrap.Modal(document.getElementById('resetPasswordModal'));
            myModal.show();
        }
    </script>
}