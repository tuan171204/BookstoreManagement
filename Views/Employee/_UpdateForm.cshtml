@model BookstoreManagement.ViewModels.Employee.EmployeeViewModel
@{
    var roleDisplayNames = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
    {
        { "Employee", "Nhân viên" },
        { "Manager", "Quản lý" },
    };
}

<form id="employeeFormForUpdate" asp-controller="Employee" asp-action="Update" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="FullName" class="form-label">Họ tên nhân viên</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveCheck" />
        <label class="form-check-label" for="isActiveCheck">
            Kích hoạt nhân viên
        </label>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.RoleName, "Chức vụ")
        @Html.DropDownListFor(m => m.RoleName, (IEnumerable<SelectListItem>)ViewBag.Roles,
        "-- Chọn chức vụ --", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
    </div>

    <div class="d-flex flex-row justify-content-around gap-3">
        <button type="button" class="btn btn-secondary w-100 cancel-button border border-secondary rounded"
                data-bs-dismiss="modal">
            Hủy
        </button>
        <button type="submit" class="btn w-100">Lưu</button>
    </div>
</form>