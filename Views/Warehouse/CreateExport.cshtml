@model BookstoreManagement.ViewModels.Warehouse.ExportTicketCreateViewModel

@{
    ViewData["Title"] = "Tạo Phiếu Xuất Kho";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-box-arrow-up"></i> Tạo Phiếu Xuất Kho (Thủ công)</h2>
        </div>
    </div>

    <form asp-action="CreateExport" method="post" id="exportForm">
        @Html.AntiForgeryToken()

        <div class="card mb-4">
            <div class="card-header">
                <h5>Thông tin chung</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Reason" class="form-label">Lý do xuất <span class="text-danger">*</span></label>
                        <input asp-for="Reason" class="form-control" placeholder="Hủy hàng hỏng, Trả NXB..." />
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Note" class="form-label">Ghi chú</label>
                        <input asp-for="Note" class="form-control" />
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Danh sách sách xuất</h5>
                <button type="button" id="importExcelBtnExport" class="btn btn-sm btn-info" data-bs-toggle="modal"
                    data-bs-target="#exportImportModal">
                    <i class="bi bi-file-earmark-spreadsheet"></i> Import Excel
                </button>
                <button type="button" id="addBookRow" class="btn btn-sm btn-danger">
                    <i class="bi bi-plus-circle"></i> Thêm dòng
                </button>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead class="table-light">
                        <tr>
                            <th>Sách</th>
                            <th style="width: 150px;">Số lượng</th>
                            <th style="width: 50px;"></th>
                        </tr>
                    </thead>
                    <tbody id="bookDetailsBody"></tbody>
                </table>
                <div id="detailsValidation" class="text-danger"></div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu Phiếu Xuất</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Hủy</a>
        </div>
    </form>
</div>

<table style="display: none;">
    <tr id="bookRowTemplate">
        <td>
            <select name="Details[__INDEX__].BookId" class="form-select book-select" required>
                <option value="">-- Chọn Sách --</option>
                @if (Model.Books != null)
                {
                    @foreach (var item in Model.Books)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>
        </td>
        <td>
            <input type="number" name="Details[__INDEX__].Quantity" class="form-control quantity-input" value="1"
                min="1" required />
        </td>
        <td class="text-center">
            <button type="button" class="btn btn-sm btn-outline-danger remove-row"><i class="bi bi-trash"></i></button>
        </td>
    </tr>
</table>

<div class="modal fade" id="exportImportModal" tabindex="-1" aria-labelledby="exportImportModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exportImportModalLabel">Import Chi tiết sách xuất từ Excel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="importExportExcelForm" asp-action="UploadExportData" asp-controller="Warehouse" method="post"
                enctype="multipart/form-data">
                <div class="modal-body">
                    <p>Chọn file Excel (.xlsx) chứa chi tiết sách (BookId, Quantity) để thêm nhanh vào phiếu xuất này.
                        <a href="javascript:void(0);">Tải mẫu file</a>
                    </p>
                    <input type="file" name="ExcelFile" class="form-control" required accept=".xlsx" />
                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary"><i class="bi bi-upload"></i> Tải lên</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            let rowIndex = 0;

            const bookOptions = $("#bookRowTemplate").find('.book-select').html();

            function processExportDetails(details) {
                $("#bookDetailsBody").empty();
                rowIndex = 0;

                details.forEach(function (item) {
                    let template = $("#bookRowTemplate").html();
                    template = template.replace(/__INDEX__/g, rowIndex);
                    let newRow = $("<tr>" + template + "</tr>");


                    let bookDropdown = newRow.find(".book-select");
                    bookDropdown.html(bookOptions);
                    bookDropdown.val(item.bookId);


                    newRow.find(".quantity-input").val(item.quantity);


                    $("#bookDetailsBody").append(newRow);
                    rowIndex++;
                });

                $('#exportImportModal').modal('hide');
            }


            $('#importExportExcelForm').submit(function (e) {
                e.preventDefault();

                $('#importExportExcelForm button[type="submit"]').prop('disabled', true).text('Đang tải...');

                var formData = new FormData(this);

                $.ajax({
                    url: '@Url.Action("UploadExportData", "Warehouse")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        $('#importExportExcelForm button[type="submit"]').prop('disabled', false).text('Tải lên');

                        if (response.success) {
                            processExportDetails(response.details);
                            alert("Import chi tiết sách xuất thành công!");
                        } else {
                            alert("Import thất bại: " + response.message);
                        }
                    },
                    error: function (xhr) {
                        $('#importExportExcelForm button[type="submit"]').prop('disabled', false).text('Tải lên');
                        alert("Lỗi không xác định khi tải file. Vui lòng kiểm tra file Excel.");
                    }
                });
            });

            $("#addBookRow").click(function () {
                let template = $("#bookRowTemplate").html().replace(/__INDEX__/g, rowIndex++);
                $("#bookDetailsBody").append("<tr>" + template + "</tr>");
            });

            $("#bookDetailsBody").on("click", ".remove-row", function () {
                $(this).closest("tr").remove();
            });

            $("#exportForm").submit(function (e) {
                if ($("#bookDetailsBody tr").length === 0) {
                    $("#detailsValidation").text("Bạn phải thêm ít nhất một quyển sách.");
                    e.preventDefault();
                }
            });
        });
    </script>
}