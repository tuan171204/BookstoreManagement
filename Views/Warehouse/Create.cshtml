@model BookstoreManagement.ViewModels.Warehouse.ImportTicketCreateViewModel

@{
    ViewData["Title"] = "Tạo Phiếu Nhập Kho";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-box-arrow-in-down"></i> Tạo Phiếu Nhập Kho</h2>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Create" method="post" id="importForm">
        @Html.AntiForgeryToken()

        <div class="card mb-4">
            <div class="card-header">
                <h5>Thông tin chung</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="SupplierId" class="form-label">Nhà cung cấp</label>
                        <select asp-for="SupplierId" asp-items="@Model.Suppliers" class="form-select" id="SupplierId">
                            <option value="">-- Chọn Nhà cung cấp --</option>
                        </select>
                        <span asp-validation-for="SupplierId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PaymentMethodId" class="form-label">Hình thức thanh toán</label>
                        <select asp-for="PaymentMethodId" asp-items="@Model.PaymentMethods" class="form-select">
                            <option value="">-- Chọn hình thức TT --</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label asp-for="Note" class="form-label">Ghi chú</label>
                        <textarea asp-for="Note" class="form-control" rows="3"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Chi tiết sách nhập</h5>
                <button type="button" id="importExcelBtn" class="btn btn-sm btn-info" data-bs-toggle="modal"
                    data-bs-target="#importModal" disabled>
                    <i class="bi bi-file-earmark-spreadsheet"></i> Import Excel
                </button>
                <button type="button" id="addBookRow" class="btn btn-sm btn-success" disabled>
                    <i class="bi bi-plus-circle"></i> Thêm Sách
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class="table-light">
                            <tr>
                                <th>Sách</th>
                                <th style="width: 150px;">Số lượng</th>
                                <th style="width: 200px;">Giá nhập (VNĐ)</th>
                                <th style="width: 200px;">Thành tiền</th>
                                <th style="width: 50px;"></th>
                            </tr>
                        </thead>
                        <tbody id="bookDetailsBody">
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <td colspan="3" class="text-end"><strong>Tổng cộng:</strong></td>
                                <td colspan="2"><strong id="totalCost">0 VNĐ</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <div id="detailsValidation" class="text-danger"></div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Lưu Phiếu Nhập
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Hủy
            </a>
        </div>
    </form>
</div>

<table style="display: none;">
    <tr id="bookRowTemplate">
        <td>
            <select name="Details[__INDEX__].BookId" class="form-select book-dropdown" required>
                <option value="">-- Chọn Sách --</option>
            </select>
        </td>
        <td>
            <input type="number" name="Details[__INDEX__].Quantity" class="form-control quantity-input" value="1"
                min="1" required />
        </td>
        <td>
            <input type="number" name="Details[__INDEX__].CostPrice" class="form-control cost-input cost-price-input"
                value="0" min="0" step="1" required readonly />
        </td>
        <td>
            <strong class="subtotal">0 VNĐ</strong>
        </td>
        <td class="text-center">
            <button type="button" class="btn btn-sm btn-danger remove-row">
                <i class="bi bi-trash"></i>
            </button>
        </td>
    </tr>
</table>

<div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importModalLabel">Import Chi tiết sách nhập từ Excel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="importExcelForm" asp-action="UploadImportData" asp-controller="Warehouse" method="post"
                enctype="multipart/form-data">
                <div class="modal-body">
                    <p>Chọn file Excel (.xlsx) chứa chi tiết sách (BookId, Quantity, CostPrice) để thêm nhanh vào phiếu
                        nhập này. <a href="javascript:void(0);">Tải mẫu file</a></p>
                    <input type="file" name="ExcelFile" class="form-control" required accept=".xlsx" />
                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary"><i class="bi bi-upload"></i> Tải lên</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            let rowIndex = 0;
            window.supplierBooksData = [];

            // Hàm chèn chi tiết sách từ Import Excel vào bảng
            function processImportDetails(details) {
                // Xóa các dòng thủ công cũ, giữ lại các dòng từ Import
                $("#bookDetailsBody").empty();
                rowIndex = 0; // Reset index

                details.forEach(function (item) {
                    let template = $("#bookRowTemplate").html();
                    template = template.replace(/__INDEX__/g, rowIndex);
                    let newRow = $("<tr>" + template + "</tr>");

                    // 1. Render Dropdown và chọn sách
                    let bookDropdown = newRow.find(".book-dropdown");
                    renderBookDropdown(bookDropdown);
                    bookDropdown.val(item.bookId).trigger('change'); // Chọn sách và kích hoạt change để set giá

                    // 2. Set Quantity và CostPrice
                    newRow.find(".quantity-input").val(item.quantity);
                    newRow.find(".cost-input").val(item.costPrice);

                    // 3. Kích hoạt tính toán
                    newRow.find(".cost-input").trigger('input'); // Kích hoạt tính thành tiền

                    // Mở khóa các field để submit
                    bookDropdown.prop('disabled', false);
                    newRow.find(".quantity-input").prop('readonly', false).removeClass('form-control-plaintext');
                    newRow.find(".remove-row").prop('disabled', false);

                    $("#bookDetailsBody").append(newRow);
                    rowIndex++;
                });

                updateTotalCost();
                $('#importModal').modal('hide'); // Đóng modal sau khi hoàn tất
            }

            // Xử lý sự kiện submit form Import Excel (sử dụng AJAX)
            $('#importExcelForm').submit(function (e) {
                e.preventDefault(); // Ngăn chặn form submit mặc định

                // Vô hiệu hóa nút để tránh double click
                $('#importExcelForm button[type="submit"]').prop('disabled', true).text('Đang tải...');

                var formData = new FormData(this);

                $.ajax({
                    url: '@Url.Action("UploadImportData", "Warehouse")',
                    type: 'POST',
                    data: formData,
                    processData: false, // Bắt buộc khi upload file
                    contentType: false, // Bắt buộc khi upload file
                    success: function (response) {
                        $('#importExcelForm button[type="submit"]').prop('disabled', false).text('Tải lên');

                        if (response.success) {
                            processImportDetails(response.details);
                            alert("Import chi tiết sách thành công!");
                        } else {
                            // Xử lý lỗi từ Server (nếu Server trả về lỗi JSON thay vì Redirect)
                            alert("Import thất bại: " + response.message);
                        }
                    },
                    error: function (xhr) {
                        $('#importExcelForm button[type="submit"]').prop('disabled', false).text('Tải lên');
                        // Xử lý lỗi HTTP (ví dụ: 500 Internal Server Error)
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            alert("Lỗi Server: " + xhr.responseJSON.message);
                        } else {
                            alert("Lỗi không xác định khi tải file. Vui lòng kiểm tra file Excel.");
                        }
                    }
                });
            });

            $('#SupplierId').on('change', function () {
                var supplierId = $(this).val();

                // Bật/Tắt nút Import dựa trên việc chọn NCC
                $("#importExcelBtn").prop('disabled', !supplierId);

                $("#detailsValidation").text("");
                $("#addBookRow").prop('disabled', true);
                window.supplierBooksData = [];

                $("#bookDetailsBody tr").each(function () {
                    lockRowFields($(this));
                });

                if (supplierId) {
                    $.ajax({
                        url: '@Url.Action("GetBooksBySupplier", "Warehouse")',
                        type: 'GET',
                        data: { supplierId: supplierId },
                        success: function (data) {
                            if (data && data.length > 0) {
                                window.supplierBooksData = data;

                                $("#addBookRow").prop('disabled', false);

                                if ($("#bookDetailsBody tr").length === 0) {
                                    $("#addBookRow").click();
                                }
                            } else {
                                $("#detailsValidation").text("Nhà cung cấp này chưa có sách được định giá. Vui lòng chọn nhà cung cấp khác.");
                            }
                        },
                        error: function () {
                            alert("Lỗi khi tải danh sách sách từ nhà cung cấp.");
                        }
                    });
                } else {
                    updateTotalCost();
                }
            });

            function lockRowFields(row) {
                row.find(".book-dropdown").prop('disabled', true);
                row.find(".quantity-input").prop('readonly', true).addClass('form-control-plaintext');
                row.find(".cost-input").addClass('form-control-plaintext');

                row.find(".remove-row").prop('disabled', true);
            }

            function renderBookDropdown(dropdownElement) {
                var options = '<option value="">-- Chọn Sách --</option>';
                $.each(window.supplierBooksData, function (index, item) {

                    options += '<option value="' + item.bookId + '" data-price="' + item.costPrice + '">' + item.title + '</option>';
                });

                dropdownElement.html(options);
            }

            $("#addBookRow").click(function () {
                if (window.supplierBooksData.length === 0) {
                    alert("Vui lòng chọn Nhà cung cấp hoặc Nhà cung cấp này chưa có sách.");
                    return;
                }

                let template = $("#bookRowTemplate").html();
                template = template.replace(/__INDEX__/g, rowIndex);

                let newRow = $("<tr>" + template + "</tr>");
                $("#bookDetailsBody").append(newRow);


                renderBookDropdown(newRow.find(".book-dropdown"));

                newRow.find(".book-dropdown").prop('disabled', false);
                newRow.find(".quantity-input").prop('readonly', false).removeClass('form-control-plaintext');
                newRow.find(".remove-row").prop('disabled', false);

                rowIndex++;
                updateTotalCost();
            });

            $("#bookDetailsBody").on("click", ".remove-row", function () {

                if (!$(this).prop('disabled')) {
                    $(this).closest("tr").remove();
                    updateTotalCost();
                }
            });
            $("#bookDetailsBody").on("change", ".book-dropdown", function () {
                let selectedOption = $(this).find('option:selected');
                let costPrice = selectedOption.data('price');

                let row = $(this).closest("tr");
                let costPriceInput = row.find(".cost-input");

                if (costPrice !== undefined) {

                    costPriceInput.val(costPrice);

                    costPriceInput.removeClass('form-control').addClass('form-control-plaintext');
                } else {

                    costPriceInput.val(0);
                    costPriceInput.removeClass('form-control').addClass('form-control-plaintext');
                }

                costPriceInput.trigger('input');
            });


            $("#bookDetailsBody").on("input", ".quantity-input, .cost-input", function () {
                let row = $(this).closest("tr");
                let quantity = parseInt(row.find(".quantity-input").val()) || 0;
                let costPrice = parseFloat(row.find(".cost-input").val()) || 0;
                let subtotal = quantity * costPrice;

                row.find(".subtotal").text(subtotal.toLocaleString('vi-VN') + " VNĐ");


                updateTotalCost();
            });

            function updateTotalCost() {
                let total = 0;
                $("#bookDetailsBody tr").each(function () {

                    let quantity = parseInt($(this).find(".quantity-input").val()) || 0;
                    let costPrice = parseFloat($(this).find(".cost-input").val()) || 0;
                    total += quantity * costPrice;
                });
                $("#totalCost").text(total.toLocaleString('vi-VN') + " VNĐ");
            }


            $("#importForm").submit(function (e) {
                if ($("#bookDetailsBody tr").length === 0) {
                    $("#detailsValidation").text("Bạn phải thêm ít nhất một quyển sách.");
                    e.preventDefault();
                } else {
                    $("#detailsValidation").text("");


                    $("#bookDetailsBody").find(".book-dropdown").prop('disabled', false);
                }
            });
        });
    </script>
}