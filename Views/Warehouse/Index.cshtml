@model IEnumerable<BookstoreManagement.ViewModels.Warehouse.WarehouseTicketViewModel>

@{
    ViewData["Title"] = "Quản lý Kho";
    
    Func<string, string, string, string> GetSortUrl = (column, currentSortBy, currentSortOrder) =>
    {
        var queryParams = new List<string>();
        if (ViewData["CurrentFilter"] != null && !string.IsNullOrEmpty(ViewData["CurrentFilter"].ToString()))
        {
            queryParams.Add($"searchString={Uri.EscapeDataString(ViewData["CurrentFilter"].ToString())}");
        }
        if (ViewData["TypeFilter"] != null && !string.IsNullOrEmpty(ViewData["TypeFilter"].ToString()))
        {
            queryParams.Add($"typeFilter={Uri.EscapeDataString(ViewData["TypeFilter"].ToString())}");
        }
        if (ViewData["StatusFilter"] != null && !string.IsNullOrEmpty(ViewData["StatusFilter"].ToString()))
        {
            queryParams.Add($"statusFilter={Uri.EscapeDataString(ViewData["StatusFilter"].ToString())}");
        }
        if (ViewData["FromDateFilter"] != null && !string.IsNullOrEmpty(ViewData["FromDateFilter"].ToString()))
        {
            queryParams.Add($"fromDate={Uri.EscapeDataString(ViewData["FromDateFilter"].ToString())}");
        }
        if (ViewData["ToDateFilter"] != null && !string.IsNullOrEmpty(ViewData["ToDateFilter"].ToString()))
        {
            queryParams.Add($"toDate={Uri.EscapeDataString(ViewData["ToDateFilter"].ToString())}");
        }
        string newSortOrder = currentSortBy == column && currentSortOrder == "asc" ? "desc" : "asc";
        queryParams.Add($"sortBy={column}");
        queryParams.Add($"sortOrder={newSortOrder}");
        queryParams.Add($"pageNumber=1");
        return "?" + string.Join("&", queryParams);
    };
    string currentSortBy = ViewData["SortBy"]?.ToString() ?? "Date";
    string currentSortOrder = ViewData["SortOrder"]?.ToString() ?? "desc";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="bi bi-person-bounding-box"></i> Quản lý phiếu Nhập/xuất)</h2>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Tạo Phiếu Nhập
                    </a>
                    <a asp-action="CreateExport" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Tạo Phiếu Xuất
                    </a>
                    <a asp-action="ExportWarehouseData" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Xuất Excel
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <input type="hidden" name="pageNumber" value="1" />
                <input type="hidden" name="sortBy" value="@currentSortBy" />
                <input type="hidden" name="sortOrder" value="@currentSortOrder" />
                <div class="col-md-3">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control"
                        placeholder="Mã phiếu, mã đơn hàng, NCC..." />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Loại phiếu</label>
                    <select name="typeFilter" class="form-select">
                        <option value="">-- Tất cả --</option>
                        <option value="Phiếu Nhập" selected="@(ViewBag.TypeFilterParam == "Phiếu Nhập")">Phiếu Nhập
                        </option>
                        <option value="Phiếu Xuất" selected="@(ViewBag.TypeFilterParam == "Phiếu Xuất")">Phiếu Xuất
                        </option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Trạng thái</label>
                    <select name="statusFilter" class="form-select">
                        <option value="">-- Tất cả --</option>
                        <option value="Completed" selected="@(ViewBag.StatusFilterParam == "Completed")">Completed
                        </option>
                        <option value="Pending" selected="@(ViewBag.StatusFilterParam == "Pending")">Pending</option>
                        <option value="Cancelled" selected="@(ViewBag.StatusFilterParam == "Cancelled")">Cancelled
                        </option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="fromDate" value="@ViewData["FromDateFilter"]" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="toDate" value="@ViewData["ToDateFilter"]" class="form-control" />
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Tìm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (ViewBag.TotalItems > 0)
            {
                <div class="mb-3">
                    <span class="text-muted">Hiển thị <strong>@((ViewBag.PageNumber - 1) * ViewBag.PageSize + 1)</strong> -
                        <strong>@(Math.Min(ViewBag.PageNumber * ViewBag.PageSize, ViewBag.TotalItems))</strong> trong tổng
                        số <strong>@ViewBag.TotalItems</strong> phiếu</span>
                </div>
            }
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <a href="@GetSortUrl("documentnumber", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Mã phiếu
                                    @if (currentSortBy == "documentnumber")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("type", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Loại
                                    @if (currentSortBy == "type")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("date", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Ngày
                                    @if (currentSortBy == "date")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>Đối tượng/Lý do</th>
                            <th>
                                <a href="@GetSortUrl("totalquantity", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Tổng SL
                                    @if (currentSortBy == "totalquantity")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("totalcost", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Tổng tiền
                                    @if (currentSortBy == "totalcost")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("status", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Trạng thái
                                    @if (currentSortBy == "status")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.DocumentNumber</strong></td>
                                    <td>
                                        @if (item.Type == "Import")
                                        {
                                            <span class="badge bg-success">Phiếu Nhập</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-dark">Phiếu Xuất</span>
                                        }
                                    </td>
                                    <td>@item.Date?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Reference</td>
                                    <td>@item.TotalQuantity</td>
                                    <td>@(item.TotalCost?.ToString("N0")) ₫</td>
                                    <td>

                                        @if (item.Status == "Pending")
                                        {

                                            <span class="badge bg-warning text-dark">@item.Status</span>

                                        }
                                        else if (item.Status == "Completed")
                                        {
                                            <span class="badge bg-success">@item.Status</span>
                                        }
                                        else if (item.Status == "Cancelled")
                                        {
                                            <span class="badge bg-danger">@item.Status</span>
                                        }
                                    </td>


                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.Id" asp-route-type="@item.Type"
                                                class="btn btn-info" title="Chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                    <p class="mt-2 text-muted">Không tìm thấy phiếu nhập/xuất nào</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @await Html.PartialAsync("_Pagination")
        </div>
    </div>
</div>