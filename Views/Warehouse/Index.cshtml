@model IEnumerable<BookstoreManagement.ViewModels.Warehouse.WarehouseTicketViewModel>

@{
    ViewData["Title"] = "Quản lý Kho";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="bi bi-person-bounding-box"></i> Quản lý Kho (Nhập/Xuất)</h2>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Tạo Phiếu Nhập
                    </a>
                    <a asp-action="CreateExport" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Tạo Phiếu Xuất
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control"
                           placeholder="Mã phiếu, mã đơn hàng, NCC..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Loại phiếu</label>
                    <select name="typeFilter" class="form-select" asp-items="@ViewBag.TypeFilter">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Trạng thái</label>
                    <select name="statusFilter" class="form-select" asp-items="@ViewBag.StatusFilter">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Tìm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Mã phiếu</th>
                            <th>Loại</th>
                            <th>Ngày</th>
                            <th>Đối tượng/Lý do</th>
                            <th>Tổng SL</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.DocumentNumber</strong></td>
                                    <td>
                                        @if (item.Type == "Import")
                                        {
                                            <span class="badge bg-success">Phiếu Nhập</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-dark">Phiếu Xuất</span>
                                        }
                                    </td>
                                    <td>@item.Date?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Reference</td>
                                    <td>@item.TotalQuantity</td>
                                    <td>@(item.TotalCost?.ToString("N0")) ₫</td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Status</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.Id" asp-route-type="@item.Type"
                                               class="btn btn-info" title="Chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                    <p class="mt-2 text-muted">Không tìm thấy phiếu nhập/xuất nào</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @await Html.PartialAsync("_Pagination")
        </div>
    </div>
</div>