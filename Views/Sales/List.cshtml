@model IEnumerable<BookstoreManagement.Models.Order>

@{
    ViewData["Title"] = "Lịch sử Bán Hàng";
    Layout = "_Layout";
    
    Func<string, string, string, string> GetSortUrl = (column, currentSortBy, currentSortOrder) =>
    {
        var queryParams = new List<string>();
        if (ViewData["CurrentFilter"] != null && !string.IsNullOrEmpty(ViewData["CurrentFilter"].ToString()))
        {
            queryParams.Add($"searchString={Uri.EscapeDataString(ViewData["CurrentFilter"].ToString())}");
        }
        if (ViewData["StatusFilter"] != null && !string.IsNullOrEmpty(ViewData["StatusFilter"].ToString()))
        {
            queryParams.Add($"status={Uri.EscapeDataString(ViewData["StatusFilter"].ToString())}");
        }
        if (ViewData["EmployeeFilter"] != null && !string.IsNullOrEmpty(ViewData["EmployeeFilter"].ToString()))
        {
            queryParams.Add($"employeeId={Uri.EscapeDataString(ViewData["EmployeeFilter"].ToString())}");
        }
        if (ViewData["FromDateFilter"] != null && !string.IsNullOrEmpty(ViewData["FromDateFilter"].ToString()))
        {
            queryParams.Add($"fromDate={ViewData["FromDateFilter"]}");
        }
        if (ViewData["ToDateFilter"] != null && !string.IsNullOrEmpty(ViewData["ToDateFilter"].ToString()))
        {
            queryParams.Add($"toDate={ViewData["ToDateFilter"]}");
        }
        string newSortOrder = currentSortBy == column && currentSortOrder == "asc" ? "desc" : "asc";
        queryParams.Add($"sortBy={column}");
        queryParams.Add($"sortOrder={newSortOrder}");
        queryParams.Add($"pageNumber=1");
        return "?" + string.Join("&", queryParams);
    };
    string currentSortBy = ViewData["SortBy"]?.ToString() ?? "OrderDate";
    string currentSortOrder = ViewData["SortOrder"]?.ToString() ?? "desc";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Lịch sử Bán Hàng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Lịch sử Bán Hàng</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-history me-1"></i>
            Danh sách Hóa đơn
            <a asp-controller="Sales" asp-action="Index" class="btn btn-primary btn-sm float-end">
                <i class="fas fa-plus"></i> Quay Lại Trang Bán Hàng (POS)
            </a>
        </div>
        <div class="card-body">
            <!-- Search and Filter Form -->
            <form asp-action="List" method="get" class="row g-3 mb-4">
                <input type="hidden" name="pageNumber" value="1" />
                <input type="hidden" name="sortBy" value="@currentSortBy" />
                <input type="hidden" name="sortOrder" value="@currentSortOrder" />
                
                <div class="col-md-3">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="searchString" class="form-control"
                        placeholder="Tên KH, SĐT, NV, Mã đơn..." value="@ViewData["CurrentFilter"]" />
                </div>
                
                <div class="col-md-2">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select">
                        <option value="">-- Tất cả --</option>
                        @if (ViewBag.Statuses != null)
                        {
                            @foreach (var status in ViewBag.Statuses)
                            {
                                <option value="@status" selected="@(ViewData["StatusFilter"]?.ToString() == status)">@status</option>
                            }
                        }
                    </select>
                </div>
                
                <div class="col-md-2">
                    <label class="form-label">Nhân viên</label>
                    <select name="employeeId" class="form-select">
                        <option value="">-- Tất cả --</option>
                        @if (ViewBag.Employees != null)
                        {
                            @foreach (var emp in ViewBag.Employees)
                            {
                                <option value="@emp.Id" selected="@(ViewData["EmployeeFilter"]?.ToString() == emp.Id)">@emp.FullName</option>
                            }
                        }
                    </select>
                </div>
                
                <div class="col-md-2">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="fromDate" class="form-control" value="@ViewData["FromDateFilter"]" />
                </div>
                
                <div class="col-md-2">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="toDate" class="form-control" value="@ViewData["ToDateFilter"]" />
                </div>
                
                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Tìm
                    </button>
                </div>
            </form>

            @if (ViewBag.TotalItems > 0)
            {
                <div class="mb-3">
                    <span class="text-muted">Hiển thị <strong>@((ViewBag.PageNumber - 1) * ViewBag.PageSize + 1)</strong> - <strong>@(Math.Min(ViewBag.PageNumber * ViewBag.PageSize, ViewBag.TotalItems))</strong> trong tổng số <strong>@ViewBag.TotalItems</strong> đơn hàng</span>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                <thead>
                    <tr>
                            <th>
                                <a href="@GetSortUrl("orderid", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Mã đơn
                                    @if (currentSortBy == "orderid")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("orderdate", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Ngày bán
                                    @if (currentSortBy == "orderdate")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("customer", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Khách hàng
                                    @if (currentSortBy == "customer")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("user", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Người bán
                                    @if (currentSortBy == "user")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("finalamount", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark text-end">
                                    Tổng Tiền
                                    @if (currentSortBy == "finalamount")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("status", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Trạng thái
                                    @if (currentSortBy == "status")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                        @if (Model != null && Model.Any())
                        {
                    @foreach (var order in Model)
                    {
                        <tr>
                                    <td>#@order.OrderId</td>
                            <td>@order.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@order.Customer.FullName</td>
                            <td>@order.User.FullName</td>
                            <td class="text-end">@order.FinalAmount.ToString("N0") đ</td>
                                    <td class="text-center">
                                        <span class="badge bg-success">@order.Status</span>
                                    </td>
                            <td class="text-center">
                                <a asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderId"
                                            class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> Xem CT
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                    <p class="mt-2">Không tìm thấy đơn hàng nào</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>

            <!-- Pagination -->
            @await Html.PartialAsync("_Pagination")
        </div>
    </div>
</div>