@model IEnumerable<BookstoreManagement.Models.Order>

@{
    ViewData["Title"] = "Lịch sử Bán Hàng";
    Layout = "_Layout"; // Đảm bảo dùng Layout chính của bạn
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Lịch sử Bán Hàng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Lịch sử Bán Hàng</li>
    </ol>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-history me-1"></i>
            Danh sách Hóa đơn
            <a asp-controller="Sales" asp-action="Index" class="btn btn-primary btn-sm float-end">
                <i class="fas fa-plus"></i> Quay Lại Trang Bán Hàng (POS)
            </a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Ngày bán</th>
                        <th>Khách hàng</th>
                        <th>Người bán</th>
                        <th class="text-end">Tổng Tiền</th>
                        <th class="text-center">Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@order.Customer.FullName</td>
                            <td>@order.User.FullName</td>
                            <td class="text-end">@order.FinalAmount.ToString("N0") đ</td>
                            <td class="text-center"><span class="badge bg-success">@order.Status</span></td>
                            <td class="text-center">
                                <a href="#" class="btn btn-info btn-sm">Xem CT</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#datatablesSimple').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json"
                },
                "order": [[ 0, "desc" ]] // Sắp xếp theo ngày mới nhất
            });
        });
    </script>
}