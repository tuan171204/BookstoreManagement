@model BookstoreManagement.ViewModels.Book.BookViewModel

@{
    ViewData["Title"] = "Chi tiết sách";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> Chi tiết sách</h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Tên sách -->
                        <div class="col-6">
                            <h5>@Model.Title</h5>
                            <hr />
                        </div>

                        <div class="col-6">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow-sm" />
                            }
                            else
                            {
                                <div class="alert alert-secondary text-center">Chưa có hình ảnh</div>
                            }
                        </div>

                        <!-- Thông tin cơ bản -->
                        <div class="col-md-4">
                            <label class="text-muted">Tác giả:</label>
                            <p class="fw-bold">@Model.AuthorName</p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted">Thể loại:</label>
                            <div>
                                @if (Model.CategoryNames != null && Model.CategoryNames.Any())
                                {
                                    @foreach (var cat in Model.CategoryNames)
                                    {
                                        <span class="badge bg-info text-dark me-1">@cat</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">Chưa phân loại</span>
                                }
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted">Nhà xuất bản:</label>
                            <p class="fw-bold">@Model.PublisherName</p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted">Năm xuất bản:</label>
                            <p class="fw-bold">@Model.PublicationYear</p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted">Giá nhập:</label>
                            <p class="fw-bold text-warning">@Model.DefaultCostPrice.ToString("N0") ₫</p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted">Nhà cung cấp:</label>
                            <p class="fw-bold">@Model.SupplierName</p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted">Giá bán:</label>
                            <p class="fw-bold text-success">@Model.Price.ToString("N0") ₫</p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted">Tồn kho:</label>
                            <p>
                                <span
                                    class="badge @(Model.StockQuantity > Model.LowStockThreshold ? "bg-success" : "bg-danger") fs-6">
                                    @Model.StockQuantity
                                </span>
                                @if (Model.StockQuantity <= Model.LowStockThreshold)
                                {
                                    <span class="badge bg-warning text-dark">Sắp hết</span>
                                }
                            </p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted">Ngưỡng cảnh báo:</label>
                            <p class="fw-bold">@Model.LowStockThreshold</p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted">Trạng thái:</label>
                            <p>
                                <span class="badge @(Model.IsDeleted == true ? "bg-secondary" : "bg-success") fs-6">
                                    @Model.Status
                                </span>
                            </p>
                        </div>

                        <!-- Mô tả -->
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="col-12">
                                <label class="text-muted">Mô tả:</label>
                                <p>@Model.Description</p>
                            </div>
                        }

                        <!-- Thông tin thời gian -->
                        <div class="col-12">
                            <hr />
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted">Ngày tạo:</label>
                            <p class="small">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted">Ngày cập nhật:</label>
                            <p class="small">@Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>

                    <div class="col-12 mt-4">
                        <hr />
                        <h5 class="text-primary mb-3"><i class="bi bi-graph-up-arrow"></i> Lịch sử biến động giá</h5>

                        <div class="card bg-light border-0 shadow-sm">
                            <div class="card-body">
                                <canvas id="priceHistoryChart" style="max-height: 300px;"></canvas>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 mt-5">
                        <hr />
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="text-success"><i class="bi bi-box-seam"></i> Thống kê Nhập - Xuất - Tồn</h5>

                            <div class="d-flex gap-2">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">Từ</span>
                                    <input type="date" id="statsFromDate" class="form-control"
                                        value="@DateTime.Today.AddDays(-6).ToString("yyyy-MM-dd")">
                                </div>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">Đến</span>
                                    <input type="date" id="statsToDate" class="form-control"
                                        value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")">
                                </div>
                                <button class="btn btn-sm btn-primary" onclick="loadInventoryChart()">
                                    <i class="bi bi-filter"></i> Lọc
                                </button>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 mb-3">
                                <div class="card bg-light border-0 shadow-sm h-100">
                                    <div class="card-header bg-transparent border-0 fw-bold text-muted small">
                                        DIỄN BIẾN THEO NGÀY
                                    </div>
                                    <div class="card-body">
                                        <canvas id="inventoryChart" style="min-height: 300px;"></canvas>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12 mb-3">
                                <div class="card bg-light border-0 shadow-sm h-100">
                                    <div class="card-header bg-transparent border-0 fw-bold text-muted small">
                                        TỔNG QUAN KỲ NÀY
                                    </div>
                                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                                        <div style="width: 250px; height: 250px;">
                                            <canvas id="summaryPieChart"></canvas>
                                        </div>
                                        <div class="mt-3 text-center small text-muted">
                                            <div class="mb-1">Tổng nhập: <strong class="text-success"
                                                    id="lblTotalImport">0</strong></div>
                                            <div>Tổng xuất: <strong class="text-danger" id="lblTotalExport">0</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Lấy dữ liệu từ ViewBag
            var rawData = @Html.Raw(ViewBag.PriceHistoryJson);

            // Tách mảng dữ liệu cho các trục
            var labels = rawData.map(x => x.date);
            var costData = rawData.map(x => x.cost);
            var priceData = rawData.map(x => x.price);
            var marginData = rawData.map(x => x.margin);

            var ctx = document.getElementById('priceHistoryChart').getContext('2d');

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Giá nhập (Vốn)',
                            data: costData,
                            borderColor: '#dc3545', // Màu đỏ
                            backgroundColor: 'rgba(220, 53, 69, 0.1)',
                            borderWidth: 2,
                            tension: 0.3,
                            yAxisID: 'y'
                        },
                        {
                            label: 'Giá bán',
                            data: priceData,
                            borderColor: '#198754', // Màu xanh lá
                            backgroundColor: 'rgba(25, 135, 84, 0.1)',
                            borderWidth: 2,
                            tension: 0.3,
                            yAxisID: 'y'
                        },
                        {
                            label: '% Lợi nhuận',
                            data: marginData,
                            borderColor: '#0d6efd', // Màu xanh dương
                            backgroundColor: 'rgba(13, 110, 253, 0.1)',
                            borderWidth: 2,
                            borderDash: [5, 5], // Nét đứt
                            tension: 0.3,
                            yAxisID: 'y1' // Trục Y riêng bên phải
                        }
                    ]
                },
                options: {
                    responsive: true,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            title: { display: true, text: 'Giá tiền (VNĐ)' },
                            beginAtZero: true
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            title: { display: true, text: '% Lợi nhuận' },
                            grid: {
                                drawOnChartArea: false // Không vẽ lưới đè lên trục kia
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        if (context.datasetIndex === 2) { // Margin
                                            label += context.parsed.y + '%';
                                        } else { // Price
                                            label += new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(context.parsed.y);
                                        }
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            loadInventoryChart();
        });


        // --- LOGIC BIỂU ĐỒ NHẬP XUẤT TỒN ---
        let inventoryChartInstance = null;
        let summaryPieChartInstance = null;
        const bookId = @Model.BookId; // Lấy BookId từ Model

        async function loadInventoryChart() {
            const fromDate = document.getElementById('statsFromDate').value;
            const toDate = document.getElementById('statsToDate').value;

            try {
                const response = await fetch(`/Book/GetInventoryFlow?bookId=${bookId}&fromDate=${fromDate}&toDate=${toDate}`);
                if (!response.ok) throw new Error("Lỗi tải dữ liệu");

                const data = await response.json();

                // 1. Dữ liệu cho Bar Chart (Biểu đồ diễn biến)
                const labels = data.map(x => x.date);
                const importData = data.map(x => x.import);
                const exportData = data.map(x => x.export);
                const stockData = data.map(x => x.stock);

                // 2. Tính toán tổng cho Pie Chart
                // Dùng reduce để cộng dồn mảng importData và exportData
                const totalImport = importData.reduce((a, b) => a + b, 0);
                const totalExport = exportData.reduce((a, b) => a + b, 0);

                // Hiển thị số liệu text bên dưới Pie Chart
                document.getElementById('lblTotalImport').innerText = new Intl.NumberFormat('vi-VN').format(totalImport);
                document.getElementById('lblTotalExport').innerText = new Intl.NumberFormat('vi-VN').format(totalExport);

                // --- VẼ BIỂU ĐỒ 1: BAR/LINE (Diễn biến) ---
                const ctx = document.getElementById('inventoryChart').getContext('2d');
                if (inventoryChartInstance) inventoryChartInstance.destroy();

                inventoryChartInstance = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: 'Nhập',
                                data: importData,
                                backgroundColor: 'rgba(25, 135, 84, 0.7)',
                                order: 2
                            },
                            {
                                label: 'Xuất',
                                data: exportData,
                                backgroundColor: 'rgba(220, 53, 69, 0.7)',
                                order: 3
                            },
                            {
                                type: 'line',
                                label: 'Tồn kho',
                                data: stockData,
                                borderColor: '#0d6efd',
                                borderWidth: 2,
                                tension: 0.3,
                                pointRadius: 2,
                                order: 1
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        interaction: { mode: 'index', intersect: false },
                        scales: { y: { beginAtZero: true } }
                    }
                });

                // --- VẼ BIỂU ĐỒ 2: PIE CHART (Tổng quan) ---
                const ctxPie = document.getElementById('summaryPieChart').getContext('2d');
                if (summaryPieChartInstance) summaryPieChartInstance.destroy();

                // Kiểm tra nếu cả 2 đều bằng 0 thì hiển thị màu xám (Chưa có dữ liệu)
                let pieData = [totalImport, totalExport];
                let pieColors = ['#198754', '#dc3545']; // Xanh, Đỏ
                let pieLabels = ['Tổng Nhập', 'Tổng Xuất'];

                if (totalImport === 0 && totalExport === 0) {
                    pieData = [1]; // Fake dữ liệu để vẽ tròn
                    pieColors = ['#e9ecef']; // Màu xám
                    pieLabels = ['Chưa có giao dịch'];
                }

                summaryPieChartInstance = new Chart(ctxPie, {
                    type: 'doughnut', // Dùng Doughnut (tròn rỗng ruột) nhìn hiện đại hơn Pie
                    data: {
                        labels: pieLabels,
                        datasets: [{
                            data: pieData,
                            backgroundColor: pieColors,
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'bottom' },
                            tooltip: {
                                callbacks: {
                                    label: function (context) {
                                        if (totalImport === 0 && totalExport === 0) return ' Chưa có dữ liệu';
                                        let value = context.parsed;
                                        let total = context.chart._metasets[context.datasetIndex].total;
                                        let percentage = ((value / total) * 100).toFixed(1) + '%';
                                        return ` ${context.label}: ${value} (${percentage})`;
                                    }
                                }
                            }
                        }
                    }
                });

            } catch (error) {
                console.error(error);
            }
        }
    </script>
}