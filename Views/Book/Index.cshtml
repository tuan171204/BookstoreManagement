@model IEnumerable<BookstoreManagement.ViewModels.Book.BookViewModel>

@{
    ViewData["Title"] = "Quản lý Sách";

    Func<string, string, string, string> GetSortUrl = (column, currentSortBy, currentSortOrder) =>
    {
        var queryParams = new List<string>();
        if (ViewData["CurrentFilter"] != null && !string.IsNullOrEmpty(ViewData["CurrentFilter"].ToString()))
        {
            queryParams.Add($"searchString={Uri.EscapeDataString(ViewData["CurrentFilter"].ToString())}");
        }
        if (ViewData["AuthorId"] != null && !string.IsNullOrEmpty(ViewData["AuthorId"].ToString()))
        {
            queryParams.Add($"authorId={ViewData["AuthorId"]}");
        }
        if (ViewData["PublisherId"] != null && !string.IsNullOrEmpty(ViewData["PublisherId"].ToString()))
        {
            queryParams.Add($"publisherId={ViewData["PublisherId"]}");
        }
        if (ViewData["CategoryId"] != null && !string.IsNullOrEmpty(ViewData["CategoryId"].ToString()))
        {
            queryParams.Add($"categoryId={ViewData["CategoryId"]}");
        }
        string newSortOrder = currentSortBy == column && currentSortOrder == "asc" ? "desc" : "asc";
        queryParams.Add($"sortBy={column}");
        queryParams.Add($"sortOrder={newSortOrder}");
        queryParams.Add($"pageNumber=1");
        return "?" + string.Join("&", queryParams);
    };
    string currentSortBy = ViewData["SortBy"]?.ToString() ?? "CreatedAt";
    string currentSortOrder = ViewData["SortOrder"]?.ToString() ?? "desc";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="bi bi-book"></i> Quản lý Sách</h2>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Thêm sách mới
                    </a>
                    <a asp-controller="Author" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-person"></i> Quản lý Tác giả
                    </a>
                    <a asp-controller="Publisher" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-building"></i> Quản lý NXB
                    </a>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-tags"></i> Quản lý Thể loại
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <input type="hidden" name="pageNumber" value="1" />
                <input type="hidden" name="sortBy" value="@currentSortBy" />
                <input type="hidden" name="sortOrder" value="@currentSortOrder" />
                <div class="col-md-2">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control"
                        placeholder="Tên sách, tác giả, NXB..." />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Thể loại</label>
                    <select name="categoryId" class="form-select">
                        <option value="">-- Tất cả --</option>
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var item in ViewBag.Categories as SelectList)
                            {
                                <option value="@item.Value" selected="@(item.Value == ViewData["CategoryId"]?.ToString())">
                                    @item.Text
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Tác giả</label>
                    <select name="authorId" class="form-select">
                        <option value="">-- Tất cả --</option>
                        @foreach (var item in ViewBag.Authors as SelectList)
                        {
                            <option value="@item.Value" selected="@(item.Value == ViewData["AuthorId"]?.ToString())">
                                @item.Text
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Nhà xuất bản</label>
                    <select name="publisherId" class="form-select">
                        <option value="">-- Tất cả --</option>
                        @foreach (var item in ViewBag.Publishers as SelectList)
                        {
                            <option value="@item.Value" selected="@(item.Value == ViewData["PublisherId"]?.ToString())">
                                @item.Text
                            </option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Trạng thái</label>
                    <select name="statusFilter" class="form-select">
                        <option value="Active" selected="@(ViewBag.StatusFilter == "Active")">Đang hiện hành</option>
                        <option value="Deleted" selected="@(ViewBag.StatusFilter == "Deleted")">Đã xóa (Thùng rác)
                        </option>
                    </select>
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Tìm
                    </button>
                </div>
            </div>
            </form>
        </div>
    </div>

    <!-- Books Table -->
    <div class="card">
        <div class="card-body">
            @if (ViewBag.TotalItems > 0)
            {
                <div class="mb-3">
                    <span class="text-muted">Hiển thị <strong>@((ViewBag.PageNumber - 1) * ViewBag.PageSize + 1)</strong> -
                        <strong>@(Math.Min(ViewBag.PageNumber * ViewBag.PageSize, ViewBag.TotalItems))</strong> trong tổng
                        số <strong>@ViewBag.TotalItems</strong> sách</span>
                </div>
            }
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Hình ảnh</th>
                            <th>
                                <a href="@GetSortUrl("title", currentSortBy, currentSortOrder)"
                                    class="text-decoration-none text-dark">
                                    Tên sách
                                    @if (currentSortBy == "title")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("author", currentSortBy, currentSortOrder)"
                                    class="text-decoration-none text-dark">
                                    Tác giả
                                    @if (currentSortBy == "author")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("publisher", currentSortBy, currentSortOrder)"
                                    class="text-decoration-none text-dark">
                                    Nhà xuất bản
                                    @if (currentSortBy == "publisher")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("publicationyear", currentSortBy, currentSortOrder)"
                                    class="text-decoration-none text-dark">
                                    Năm XB
                                    @if (currentSortBy == "publicationyear")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("costprice", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Giá vốn
                                    @if (currentSortBy == "costprice")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("profitmargin", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    % Lợi nhuận
                                    @if (currentSortBy == "profitmargin")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("price", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Giá bán
                                    @if (currentSortBy == "price")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("stockquantity", currentSortBy, currentSortOrder)"
                                    class="text-decoration-none text-dark">
                                    Tồn kho
                                    @if (currentSortBy == "stockquantity")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>Trạng thái</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="width: 80px;">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Title"
                                                style="width: 50px; height: 70px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted small">No Image</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@item.Title</strong>
                                        @if (item.StockQuantity <= item.LowStockThreshold)
                                        {
                                            <span class="badge bg-warning text-dark ms-2">
                                                <i class="bi bi-exclamation-triangle"></i> Sắp hết
                                            </span>
                                        }
                                    </td>
                                    <td>@item.AuthorName</td>
                                    <td>@item.PublisherName</td>
                                    <td>@item.PublicationYear</td>
                                    <td class="text-end">@item.CostPrice.ToString("N0") ₫</td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@item.ProfitMargin.ToString("F1")%</span>
                                    </td>
                                    <td class="text-end fw-bold text-success">@item.Price.ToString("N0") ₫</td>
                                    <td>
                                        <span
                                            class="badge p-2 w-50 @(item.StockQuantity > item.LowStockThreshold ? "bg-success" : "bg-danger")">
                                            @item.StockQuantity
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge p-2 w-75 @(item.IsDeleted == true ? "bg-secondary" : "bg-success")">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm d-flex gap-2">
                                            @if (item.IsDeleted == true)
                                            {
                                                <button type="button" class="btn btn-success p-2" title="Khôi phục"
                                                    onclick="actionBook(@item.BookId, '@Url.Action("Restore", "Book")', 'Bạn muốn khôi phục sách này?')">
                                                    <i class="bi bi-arrow-counterclockwise"></i>
                                                </button>

                                                <button type="button" class="btn btn-danger p-2" title="Xóa vĩnh viễn"
                                                    onclick="actionBook(@item.BookId, '@Url.Action("HardDelete", "Book")', 'CẢNH BÁO: Hành động này không thể hoàn tác! Bạn có chắc muốn xóa vĩnh viễn?')">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-info p-2"
                                                    title="Chi tiết">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-warning p-2"
                                                    title="Sửa">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <button type="button" class="btn btn-danger p-2" title="Ẩn (Xóa mềm)"
                                                    onclick="actionBook(@item.BookId, '@Url.Action("Delete", "Book")', 'Bạn muốn ẩn sách này vào thùng rác?')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }

                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                    <p class="mt-2 text-muted">Không tìm thấy sách nào</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @await Html.PartialAsync("_Pagination")
        </div>
    </div>
</div>

<!-- Delete Modal -->
@await Html.PartialAsync("_DeleteModal")

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <form id="deleteForm">
        @Html.AntiForgeryToken()
    </form>


    <script>
        let deleteId = null;
        let deleteUrl = null;

        function showDeleteModal(id, url, itemName) {
            deleteId = id;
            deleteUrl = url;
            document.getElementById('deleteMessage').textContent =
                `Bạn muốn ẩn đi sách "${itemName}"? Hành động này không thể hoàn tác.`;

            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function () {
            if (deleteUrl && deleteId) {
                // Create form data
                const formData = new FormData();
                formData.append('id', deleteId);

                // Get anti-forgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                fetch(deleteUrl, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    body: formData
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Close modal
                            var deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
                            deleteModal.hide();

                            // Show success message
                            alert(data.message);

                            // Reload page
                            location.reload();
                        } else {
                            alert(data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Có lỗi xảy ra khi xóa.');
                    });
            }
        });

        function actionBook(id, url, message) {
            if (confirm(message)) {
                // Lấy token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new FormData();
                formData.append('id', id);

                fetch(url, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    body: formData
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            location.reload(); // Tải lại trang để cập nhật danh sách
                        } else {
                            alert("Thất bại: " + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Đã xảy ra lỗi khi xử lý yêu cầu.');
                    });
            }
        }
    </script>
}