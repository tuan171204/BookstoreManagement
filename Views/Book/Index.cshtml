@model IEnumerable<BookstoreManagement.ViewModels.Book.BookViewModel>

@{
    ViewData["Title"] = "Quản lý Sách";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="bi bi-book"></i> Quản lý Sách</h2>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Thêm sách mới
                    </a>
                    <a asp-controller="Author" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-person"></i> Quản lý Tác giả
                    </a>
                    <a asp-controller="Publisher" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-building"></i> Quản lý NXB
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                           class="form-control" placeholder="Tên sách, tác giả, NXB..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tác giả</label>
                    <select name="authorId" class="form-select">
                        <option value="">-- Tất cả --</option>
                        @foreach (var item in ViewBag.Authors as SelectList)
                        {
                            <option value="@item.Value" selected="@(item.Value == ViewData["AuthorId"]?.ToString())">
                                @item.Text
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Nhà xuất bản</label>
                    <select name="publisherId" class="form-select">
                        <option value="">-- Tất cả --</option>
                        @foreach (var item in ViewBag.Publishers as SelectList)
                        {
                            <option value="@item.Value" selected="@(item.Value == ViewData["PublisherId"]?.ToString())">
                                @item.Text
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Tìm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Books Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Tên sách</th>
                            <th>Tác giả</th>
                            <th>Nhà xuất bản</th>
                            <th>Năm XB</th>
                            <th>Giá</th>
                            <th>Tồn kho</th>
                            <th>Trạng thái</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Title</strong>
                                        @if (item.StockQuantity <= item.LowStockThreshold)
                                        {
                                            <span class="badge bg-warning text-dark ms-2">
                                                <i class="bi bi-exclamation-triangle"></i> Sắp hết
                                            </span>
                                        }
                                    </td>
                                    <td>@item.AuthorName</td>
                                    <td>@item.PublisherName</td>
                                    <td>@item.PublicationYear</td>
                                    <td>@item.Price.ToString("N0") ₫</td>
                                    <td>
                                        <span class="badge @(item.StockQuantity > item.LowStockThreshold ? "bg-success" : "bg-danger")">
                                            @item.StockQuantity
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(item.IsDeleted == true ? "bg-secondary" : "bg-success")">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.BookId" 
                                               class="btn btn-info" title="Chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.BookId" 
                                               class="btn btn-warning" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger" title="Xóa"
                                                    onclick="showDeleteModal(@item.BookId, '@Url.Action("Delete", "Book")', '@item.Title')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                    <p class="mt-2 text-muted">Không tìm thấy sách nào</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @await Html.PartialAsync("_Pagination")
        </div>
    </div>
</div>

<!-- Delete Modal -->
@await Html.PartialAsync("_DeleteModal")

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <form id="deleteForm">
        @Html.AntiForgeryToken()
    </form>
}