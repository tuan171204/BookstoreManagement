@model BookstoreManagement.Models.AppUser
@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="list-group shadow-sm">
                <a asp-action="MyAccount" class="list-group-item list-group-item-action active">
                    <i class="fas fa-user-circle me-2"></i> Thông tin tài khoản
                </a>
                <a asp-action="MyOrders" class="list-group-item list-group-item-action">
                    <i class="fas fa-box-open me-2"></i> Đơn hàng của tôi
                </a>
                <a href="#" class="list-group-item list-group-item-action disabled">
                    <i class="fas fa-heart me-2"></i> Sách yêu thích
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-primary">Hồ sơ của tôi</h5>
                </div>

                <div class="row align-items-center mb-4">
                    <div class="col-md-2 text-center">
                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mx-auto"
                            style="width: 80px; height: 80px;">
                            <i class="fas fa-user fa-3x text-secondary"></i>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <h4 class="fw-bold mb-1">@Model.FullName</h4>
                        <span class="badge bg-warning text-dark">
                            <i class="fas fa-crown me-1"></i> @ViewBag.MemberRank
                        </span>
                        <span class="ms-2 text-muted small">Điểm tích lũy: <strong>@ViewBag.LoyaltyPoints</strong>
                            điểm</span>
                    </div>
                </div>
                <div class="card-body">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="fas fa-check-circle me-1"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="fas fa-exclamation-circle me-1"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="UpdateProfile" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label small text-muted fw-bold">Họ và tên</label>
                                <input type="text" name="fullName" class="form-control" value="@Model.FullName"
                                    required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small text-muted fw-bold">Email</label>
                                <input type="email" name="email" class="form-control" value="@Model.Email" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small text-muted fw-bold">Số điện thoại</label>
                                <input type="tel" name="phoneNumber" class="form-control" value="@Model.PhoneNumber"
                                    required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small text-muted fw-bold">Ngày tham gia</label>
                                <input type="text" class="form-control bg-light"
                                    value="@Model.CreatedAt?.ToString("dd/MM/yyyy")" readonly>
                            </div>
                            <div class="col-12">
                                <label class="form-label small text-muted fw-bold">Địa chỉ giao hàng mặc định</label>
                                <input type="text" name="address" class="form-control" value="@Model.Address"
                                    placeholder="Nhập địa chỉ của bạn...">
                            </div>
                        </div>

                        <div class="mt-4 text-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Lưu thay đổi
                            </button>
                            <a asp-controller="Account" asp-action="RequestChangePassword"
                                class="btn btn-outline-danger ms-2">
                                <i class="fas fa-key me-1"></i> Đổi mật khẩu
                            </a>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </div>
</div>