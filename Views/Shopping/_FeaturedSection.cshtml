@model IEnumerable<BookstoreManagement.Models.Book>

@{
    var featuredTitle = ViewBag.FeaturedTitle as string;
    var currentType = ViewBag.CurrentType as string;
}

@if (Model != null && Model.Any())
{
    <div class="d-flex align-items-center mb-3 fade-in-animation">
        <h4 class="fw-bold m-0 text-uppercase border-start border-4 border-primary ps-2">
            @featuredTitle
        </h4>
        <span class="badge bg-secondary ms-2">@Model.Count()</span>
    </div>

    <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-4 fade-in-animation">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm book-card" onclick="showBookDetails(@book.BookId)"
                    style="cursor: pointer;">
                    @if (currentType == "hot")
                    {
                        <div class="position-absolute top-0 end-0 m-2 badge bg-danger rounded-pill">HOT
                        </div>
                    }
                    @if (currentType == "new")
                    {
                        <div class="position-absolute top-0 end-0 m-2 badge bg-success rounded-pill">
                            NEW</div>
                    }
                    @if (currentType == "promotion")
                    {
                        <div
                            class="position-absolute top-0 end-0 m-2 badge bg-warning text-dark rounded-pill">SALE</div>
                    }

                    <div class="position-relative text-center p-3 bg-white">
                        <img src="@book.ImageUrl" class="card-img-top shadow-sm"
                            style="height: 160px; width: auto; object-fit: cover;" alt="@book.Title">
                    </div>
                    <div class="card-body d-flex flex-column p-2">
                        <h6 class="card-title fw-bold text-truncate small mb-1" title="@book.Title">@book.Title</h6>
                        <p class="card-text text-muted small mb-2" style="font-size: 0.8rem;">@book.Author?.Name</p>

                        <div class="mb-2 text-warning" style="font-size: 0.7rem;">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (book.AverageRating >= i)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                else if (book.AverageRating >= i - 0.5)
                                {

                                    <i class="fas fa-star-half-alt"></i>
                                }
                                else
                                {

                                    <i class="far fa-star"></i>
                                }
                            }
                            <span class="text-muted">(@book.TotalRatings)</span>
                        </div>

                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <span class="fw-bold text-primary">@book.Price.ToString("N0") đ</span>
                            <button class="btn btn-sm btn-outline-primary rounded-circle"
                                onclick="event.stopPropagation(); addToCart(@book.BookId)">
                                <i class="fas fa-cart-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    @* Pagination cho filter *@
    @if (currentType == "filter" && ViewBag.TotalFilterPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                @{
                    int currentPage = ViewBag.PageNumber ?? 1;
                    int totalPages = ViewBag.TotalFilterPages ?? 1;
                    int? catId = ViewBag.CategoryId;
                    int? authId = ViewBag.AuthorId;
                    int? pubId = ViewBag.PublisherId;
                    decimal? minP = ViewBag.MinPrice;
                    decimal? maxP = ViewBag.MaxPrice;
                    
                    Func<int, string> GetPageUrl = (pageNum) =>
                    {
                        var paramsList = new List<string> { $"type=filter", $"isAjax=true", $"pageNumber={pageNum}" };
                        if (catId.HasValue) paramsList.Add($"categoryId={catId.Value}");
                        if (authId.HasValue) paramsList.Add($"authorId={authId.Value}");
                        if (pubId.HasValue) paramsList.Add($"publisherId={pubId.Value}");
                        if (minP.HasValue) paramsList.Add($"minPrice={minP.Value}");
                        if (maxP.HasValue) paramsList.Add($"maxPrice={maxP.Value}");
                        return "?" + string.Join("&", paramsList);
                    };
                }
                
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@GetPageUrl(currentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                
                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@GetPageUrl(i)">@i</a>
                    </li>
                }
                
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@GetPageUrl(currentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
            <div class="text-center text-muted small mt-2">
                Trang @currentPage / @totalPages (@(ViewBag.TotalFilterItems ?? 0) kết quả)
            </div>
        </nav>
    }
    
    <hr class="container my-5 text-muted">
}
else
{
    <div class="text-center text-muted py-5 fade-in-animation">
        <i class="fas fa-box-open fa-3x mb-3"></i>
        <h5>Hiện chưa có sách nào trong mục "@featuredTitle"</h5>
    </div>
}

<style>
    .fade-in-animation {
        animation: fadeIn 0.5s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>