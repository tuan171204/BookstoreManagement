@model IEnumerable<BookstoreManagement.Models.Order>

@{
    ViewData["Title"] = "Quản lý Hóa đơn";
    
    Func<string, string, string, string> GetSortUrl = (column, currentSortBy, currentSortOrder) =>
    {
        var queryParams = new List<string>();
        if (ViewData["FromDateFilter"] != null && !string.IsNullOrEmpty(ViewData["FromDateFilter"].ToString()))
        {
            queryParams.Add($"fromDate={ViewData["FromDateFilter"]}");
        }
        if (ViewData["ToDateFilter"] != null && !string.IsNullOrEmpty(ViewData["ToDateFilter"].ToString()))
        {
            queryParams.Add($"toDate={ViewData["ToDateFilter"]}");
        }
        if (ViewData["StatusFilter"] != null && !string.IsNullOrEmpty(ViewData["StatusFilter"].ToString()))
        {
            queryParams.Add($"status={Uri.EscapeDataString(ViewData["StatusFilter"].ToString())}");
        }
        string newSortOrder = currentSortBy == column && currentSortOrder == "asc" ? "desc" : "asc";
        queryParams.Add($"sortBy={column}");
        queryParams.Add($"sortOrder={newSortOrder}");
        queryParams.Add($"pageNumber=1");
        return "?" + string.Join("&", queryParams);
    };
    string currentSortBy = ViewData["SortBy"]?.ToString() ?? "OrderDate";
    string currentSortOrder = ViewData["SortOrder"]?.ToString() ?? "desc";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Hóa đơn</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Danh sách Hóa đơn</li>
    </ol>

    <!-- Form Filter -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-filter me-1"></i>
            Bộ lọc tìm kiếm
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <input type="hidden" name="pageNumber" value="1" />
                <input type="hidden" name="sortBy" value="@currentSortBy" />
                <input type="hidden" name="sortOrder" value="@currentSortOrder" />
                <div class="col-md-3">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select" asp-items="@ViewBag.StatusFilter">
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-redo"></i> Làm mới
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-file-invoice-dollar me-1"></i>
            Lịch sử giao dịch
            @if (ViewBag.FromDate != null || ViewBag.ToDate != null || !string.IsNullOrEmpty(ViewBag.SelectedStatus))
            {
                <span class="badge bg-info ms-2">Đang lọc</span>
            }
        </div>
        <div class="card-body">
            @if (ViewBag.TotalItems > 0)
            {
                <div class="mb-3">
                    <span class="text-muted">Hiển thị <strong>@((ViewBag.PageNumber - 1) * ViewBag.PageSize + 1)</strong> -
                        <strong>@(Math.Min(ViewBag.PageNumber * ViewBag.PageSize, ViewBag.TotalItems))</strong> trong tổng
                        số <strong>@ViewBag.TotalItems</strong> đơn hàng</span>
                </div>
            }
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                <a href="@GetSortUrl("orderid", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Mã HĐ
                                    @if (currentSortBy == "orderid")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("orderdate", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Ngày tạo
                                    @if (currentSortBy == "orderdate")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("customer", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Khách hàng
                                    @if (currentSortBy == "customer")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("user", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Người bán
                                    @if (currentSortBy == "user")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>Phương thức</th>
                            <th>
                                <a href="@GetSortUrl("status", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark">
                                    Trạng thái
                                    @if (currentSortBy == "status")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("finalamount", currentSortBy, currentSortOrder)" class="text-decoration-none text-dark text-end">
                                    Tổng tiền
                                    @if (currentSortBy == "finalamount")
                                    {
                                        <i class="bi bi-arrow-@(currentSortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-arrow-down-up text-muted" style="opacity: 0.3;"></i>
                                    }
                                </a>
                            </th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>#@item.OrderId</td>
                                    <td>@item.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (item.CustomerId == "KH0000")
                                        {
                                            <span class="text-muted">Khách vãng lai</span>
                                        }
                                        else
                                        {
                                            @item.Customer.FullName
                                        }
                                    </td>
                                    <td>@item.User.FullName</td>
                                    <td>@item.PaymentMethod?.Value</td>
                                    <td>
                                        @{
                                            var statusClass = item.Status switch
                                            {
                                                "Completed" => "bg-success",
                                                "Pending" => "bg-warning text-dark",
                                                "Cancelled" => "bg-danger",
                                                "Delivered" => "bg-info",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass w-50 p-2">@item.Status</span>
                                    </td>
                                    <td class="text-end fw-bold text-primary">
                                        @item.FinalAmount.ToString("N0") đ
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.OrderId"
                                            class="btn btn-info btn-sm text-white" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4 text-muted">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                    Không tìm thấy đơn hàng nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @await Html.PartialAsync("_PaginationOrder")
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .pagination .page-link {
            color: #0d6efd;
        }

        .pagination .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
    </style>
}