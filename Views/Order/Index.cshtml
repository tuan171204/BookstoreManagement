@model IEnumerable<BookstoreManagement.Models.Order>

@{
    ViewData["Title"] = "Quản lý Hóa đơn";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Hóa đơn</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Danh sách Hóa đơn</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-file-invoice-dollar me-1"></i>
            Lịch sử giao dịch
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Mã HĐ</th>
                        <th>Ngày tạo</th>
                        <th>Khách hàng</th>
                        <th>Người bán</th>
                        <th>Phương thức</th>
                        <th class="text-end">Tổng tiền</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.OrderId</td>
                            <td>@item.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if(item.CustomerId == "KH0000") {
                                    <span class="text-muted">Khách vãng lai</span>
                                } else {
                                    @item.Customer.FullName
                                }
                            </td>
                            <td>@item.User.FullName</td>
                            <td>@item.PaymentMethod?.Value</td>
                            <td class="text-end fw-bold text-primary">
                                @item.FinalAmount.ToString("N0") đ
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-info btn-sm text-white" title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#datatablesSimple').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json" },
                "order": [[ 0, "desc" ]]
            });
        });
    </script>
}