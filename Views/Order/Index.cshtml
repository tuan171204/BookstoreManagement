@model IEnumerable<BookstoreManagement.Models.Order>

@{
    ViewData["Title"] = "Quản lý Hóa đơn";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Hóa đơn</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Danh sách Hóa đơn</li>
    </ol>

    <!-- Form Filter -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-filter me-1"></i>
            Bộ lọc tìm kiếm
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <input type="hidden" name="pageNumber" value="1" />
                <div class="col-md-3">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select" asp-items="@ViewBag.StatusFilter">
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-redo"></i> Làm mới
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-file-invoice-dollar me-1"></i>
            Lịch sử giao dịch
            @if (ViewBag.FromDate != null || ViewBag.ToDate != null || !string.IsNullOrEmpty(ViewBag.SelectedStatus))
            {
                <span class="badge bg-info ms-2">Đang lọc</span>
            }
        </div>
        <div class="card-body">
            @if (ViewBag.TotalItems > 0)
            {
                <div class="mb-3">
                    <span class="text-muted">Hiển thị <strong>@((ViewBag.PageNumber - 1) * ViewBag.PageSize + 1)</strong> -
                        <strong>@(Math.Min(ViewBag.PageNumber * ViewBag.PageSize, ViewBag.TotalItems))</strong> trong tổng
                        số <strong>@ViewBag.TotalItems</strong> đơn hàng</span>
                </div>
            }
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Mã HĐ</th>
                            <th>Ngày tạo</th>
                            <th>Khách hàng</th>
                            <th>Người bán</th>
                            <th>Phương thức</th>
                            <th>Trạng thái</th>
                            <th class="text-end">Tổng tiền</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>#@item.OrderId</td>
                                    <td>@item.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (item.CustomerId == "KH0000")
                                        {
                                            <span class="text-muted">Khách vãng lai</span>
                                        }
                                        else
                                        {
                                            @item.Customer.FullName
                                        }
                                    </td>
                                    <td>@item.User.FullName</td>
                                    <td>@item.PaymentMethod?.Value</td>
                                    <td>
                                        @{
                                            var statusClass = item.Status switch
                                            {
                                                "Completed" => "bg-success",
                                                "Pending" => "bg-warning text-dark",
                                                "Cancelled" => "bg-danger",
                                                "Delivered" => "bg-info",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass w-50 p-2">@item.Status</span>
                                    </td>
                                    <td class="text-end fw-bold text-primary">
                                        @item.FinalAmount.ToString("N0") đ
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.OrderId"
                                            class="btn btn-info btn-sm text-white" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4 text-muted">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                    Không tìm thấy đơn hàng nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @await Html.PartialAsync("_PaginationOrder")
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .pagination .page-link {
            color: #0d6efd;
        }

        .pagination .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
    </style>
}