@model BookstoreManagement.Models.Order

@{
    ViewData["Title"] = "Chi tiết Hóa đơn #" + Model.OrderId;
}

<div class="container-fluid px-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
    }

    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h1>Chi tiết Hóa đơn #@Model.OrderId</h1>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>

            @if (Model.Status == "Pending")
            {
                @if (ViewBag.StockIssues != null && ((List<string>)ViewBag.StockIssues).Any())
                {
                    <div class="alert alert-warning mb-3">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Cảnh báo:</strong> Đơn hàng này không đủ hàng trong kho để duyệt:
                        <ul class="mb-0 mt-2">
                            @foreach (var issue in (List<string>)ViewBag.StockIssues)
                            {
                                <li>@issue</li>
                            }
                        </ul>
                        <small class="text-muted">Vui lòng nhập thêm hàng vào kho trước khi duyệt đơn này.</small>
                    </div>
                }
                
                <form asp-action="ApproveOrder" method="post"
                    onsubmit="return confirm('Xác nhận duyệt đơn hàng này?');">
                    <input type="hidden" name="id" value="@Model.OrderId" />
                    <button type="submit" class="btn btn-success @(ViewBag.CanApprove == false ? "disabled" : "")" 
                        @(ViewBag.CanApprove == false ? "disabled title='Không đủ hàng trong kho'" : "")>
                        <i class="fas fa-check-circle me-1"></i> Duyệt đơn
                    </button>
                </form>

                <form asp-action="CancelOrder" method="post"
                    onsubmit="return confirm('Bạn chắc chắn muốn hủy đơn hàng này?');">
                    <input type="hidden" name="id" value="@Model.OrderId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times-circle me-1"></i> Hủy đơn
                    </button>
                </form>
            }

            @if (Model.Status == "Approved")
            {
                <form asp-action="StartShipping" method="post"
                    onsubmit="return confirm('Xác nhận bắt đầu giao hàng?');">
                    <input type="hidden" name="id" value="@Model.OrderId" />
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-truck me-1"></i> Bắt đầu giao hàng
                    </button>
                </form>
            }

            @* Admin không xác nhận hoàn thành - chỉ client mới xác nhận nhận hàng *@

            <button onclick="window.print()" class="btn btn-outline-dark"><i class="fas fa-print"></i> In Hóa
                Đơn</button>
        </div>
    </div>

    <div class="card mb-4" id="invoice-area">
        <div class="card-header">
            Thông tin đơn hàng
            <div>
                @if (Model.Status == "Completed")
                {
                    <span class="badge bg-success fs-6">Hoàn thành</span>
                }
                else if (Model.Status == "Shipping")
                {
                    <span class="badge bg-primary fs-6">Đang giao hàng</span>
                }
                else if (Model.Status == "Approved")
                {
                    <span class="badge bg-info fs-6">Đã duyệt</span>
                }
                else if (Model.Status == "Pending")
                {
                    <span class="badge bg-warning text-dark fs-6">Chờ xử lý</span>
                }
                else if (Model.Status == "Cancelled")
                {
                    <span class="badge bg-danger fs-6">Đã hủy</span>
                }

                <span class="ms-3 fw-bold">Ngày: @Model.OrderDate?.ToString("dd/MM/yyyy HH:mm")</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h6 class="mb-3">Từ:</h6>
                    <div><strong>Bookstore Management</strong></div>
                    <div>123 Đường ABC, Quận 1, TP.HCM</div>
                    <div>Email: admin@bookstore.com</div>
                    <div>Phone: +84 123 456 789</div>
                </div>
                <div class="col-sm-6">
                    <h6 class="mb-3">Đến (Khách hàng):</h6>
                    <div><strong>@Model.Customer.FullName</strong></div>
                    <div>SĐT: @Model.Customer.Phone</div>
                    <div>Địa chỉ: @(Model.Customer.Address ?? "---")</div>
                    <div>Người bán: @Model.User.FullName</div>
                </div>
            </div>

            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Tên Sách</th>
                            <th class="text-center">SL</th>
                            <th class="text-end">Đơn giá</th>
                            <th class="text-end">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var detail in Model.OrderDetails)
                        {
                            <tr>
                                <td class="center">@i</td>
                                <td class="strong">@detail.Book.Title</td>
                                <td class="text-center">@detail.Quantity</td>
                                <td class="text-end">@detail.UnitPrice.ToString("N0") đ</td>
                                <td class="text-end">@detail.Subtotal.ToString("N0") đ</td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>

            <div class="row">
                <div class="col-lg-4 col-sm-5 ms-auto">
                    <table class="table table-clear">
                        <tbody>
                            <tr>
                                <td class="left"><strong>Tổng cộng</strong></td>
                                <td class="text-end">@Model.TotalAmount.ToString("N0") đ</td>
                            </tr>
                            <tr>
                                <td class="left"><strong>Giảm giá</strong></td>
                                <td class="text-end">-@(Model.DiscountAmount?.ToString("N0") ?? "0") đ</td>
                            </tr>
                            <tr>
                                <td class="left"><strong>Thành tiền</strong></td>
                                <td class="text-end"><strong class="text-primary"
                                        style="font-size: 1.2em;">@Model.FinalAmount.ToString("N0") đ</strong></td>
                            </tr>
                            <tr>
                                <td class="left"><em>Phương thức TT</em></td>
                                <td class="text-end">@Model.PaymentMethod?.Value</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        @@media print {
            body * {
                visibility: hidden;
            }

            #invoice-area,
            #invoice-area * {
                visibility: visible;
            }

            #invoice-area {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
            }

            .btn,
            .breadcrumb {
                display: none !important;
            }
        }
    </style>
}