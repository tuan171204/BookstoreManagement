@model BookstoreManagement.Models.Category

@{
    ViewData["Title"] = "Thêm thể loại mới";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-folder-plus"></i> Thêm thể loại mới</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên thể loại <span
                                    class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control"
                                placeholder="Ví dụ: Tiểu thuyết, Kinh tế, Truyện tranh..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                placeholder="Nhập mô tả ngắn gọn về thể loại này..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="DefaultProfitMargin" class="form-label fw-bold">% Lợi nhuận mặc định</label>
                            <div class="input-group">
                                <input asp-for="DefaultProfitMargin" class="form-control" type="number" step="0.1" min="0" max="500" placeholder="Ví dụ: 20 (nghĩa là 20%)" />
                                <span class="input-group-text">%</span>
                            </div>
                            <small class="text-muted">% lợi nhuận mặc định cho các sách thuộc thể loại này. Nếu không nhập, sẽ phải nhập thủ công khi tạo sách.</small>
                            <span asp-validation-for="DefaultProfitMargin" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Lưu thể loại
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}