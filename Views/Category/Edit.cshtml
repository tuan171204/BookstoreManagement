@model BookstoreManagement.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa thể loại";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Chỉnh sửa thể loại</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="CategoryId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên thể loại <span
                                    class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DefaultProfitMargin" class="form-label fw-bold">% Lợi nhuận mặc định</label>
                            <div class="input-group">
                                <input asp-for="DefaultProfitMargin" class="form-control" type="number" step="0.1" min="0" max="500" placeholder="Ví dụ: 20 (nghĩa là 20%)" />
                                <span class="input-group-text">%</span>
                            </div>
                            <small class="text-muted">% lợi nhuận mặc định cho các sách thuộc thể loại này. Nếu không nhập, sẽ phải nhập thủ công khi tạo sách.</small>
                            <span asp-validation-for="DefaultProfitMargin" class="text-danger"></span>
                        </div>

                        <div class="row mb-4 text-muted small">
                            <div class="col-6">
                                Ngày tạo: @Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")
                            </div>
                            <div class="col-6 text-end">
                                Cập nhật lần cuối: @Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}